# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
maintainer="Matthias Ahouansou <matthias@ahouansou.cz>"
pkgname=koi
pkgver=0.4
pkgrel=0
pkgdesc="Theme scheduling for the KDE Plasma Desktop"
url="https://github.com/baduhai/Koi"
arch="all !armhf" # blocked by kconfig-dev & kcoreaddons-dev
license="LGPL-3.0-only"
makedepends="
	cmake
	kconfig-dev
	kcoreaddons-dev
	kwidgetsaddons-dev
"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/baduhai/Koi/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/Koi-$pkgver"
options="!check" # no tests

build() {
	cmake -S src -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

sha512sums="
58fc8c7e058bf1deae9379151f6a07dbd6c7f068b496a8d753c21793ebc5a9dca9184d679c468035bd03dfbbfa8f5c115660a1fbdb5f92eea1e0bd0cfe600e4a  koi-0.4.tar.gz
"
