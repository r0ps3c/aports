# Maintainer: Rosie K Languet <rkl@rosiesworkshop.net>
pkgname=py3-pyqt6-sip
pkgver=13.5.0
pkgrel=0
pkgdesc="The sip module support for PyQt6"
url="https://riverbankcomputing.com/software/sip"
arch="all"
license="custom:sip"
depends="python3"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
source="https://pypi.python.org/packages/source/P/PyQt6-sip/PyQt6_sip-$pkgver.tar.gz"
options="!check" # No tests
builddir="$srcdir/PyQt6_sip-$pkgver"

build() {
	export CFLAGS="$CFLAGS -O2 -flto=auto"
	export CXXFLAGS="$CXXFLAGS -O2 -flto=auto"
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
ee5d478acb2cc32fd012614b6d70d9a2a2f9b666de0f8e5a278be685bcead17b5ab230bcc82c6b33c3f163289e3bdb0818a018721f3fe5d6681179613987e9ab  PyQt6_sip-13.5.0.tar.gz
"
