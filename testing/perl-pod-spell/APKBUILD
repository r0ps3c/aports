# Contributor: Duncan Bellamy <dunk@denkimushi.com>
# Maintainer: Duncan Bellamy <dunk@denkimushi.com>
pkgname=perl-pod-spell
pkgver=1.25
pkgrel=0
pkgdesc="a formatter for spellchecking Pod"
url="https://metacpan.org/pod/Pod::Spell"
arch="noarch"
license="Artistic-1.0-Perl"
depends="perl perl-class-tiny perl-file-sharedir perl-lingua-en-inflect perl-path-tiny"
makedepends="perl-dev perl-file-sharedir-install"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/H/HA/HAARG/Pod-Spell-$pkgver.tar.gz"
builddir="$srcdir/Pod-Spell-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

sha512sums="
850a4d2cb97f48dc4114330ca0e329d0e27575f47f8c78e659449c1faf24bcf31852216e6e872fe802483cda5a8009f40338ba5833d3f5c928846c3ad7013da2  Pod-Spell-1.25.tar.gz
"
