# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=libva-utils
pkgver=2.18.0
pkgrel=0
pkgdesc="Intel VA-API Media Applications and Scripts for libva"
options="!check" # Most tests fail
url="https://github.com/intel/libva-utils"
arch="all"
license="MIT"
makedepends="
	meson
	libva-glx-dev
	libdrm-dev
	wayland-dev
	"
source="https://github.com/01org/libva-utils/archive/$pkgver/libva-utils-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddrm=true \
		-Dx11=true \
		-Dwayland=true \
		-Dtests=false \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
8752a0f71e8dfc1b168f3bf371e52b9737f0141826bf525d40c93b038aaa13b5ef4e6406fbd4c8949e151ee52b499423ee98f10e58652cf433a6a759ce3a7653  libva-utils-2.18.0.tar.gz
"
