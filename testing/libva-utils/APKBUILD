# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=libva-utils
pkgver=2.17.0
pkgrel=0
pkgdesc="Intel VA-API Media Applications and Scripts for libva"
options="!check" # Most tests fail
url="https://github.com/intel/libva-utils"
arch="all"
license="MIT"
makedepends="
	meson
	libva-glx-dev
	libdrm-dev
	wayland-dev
	"
source="https://github.com/01org/libva-utils/archive/$pkgver/libva-utils-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Ddrm=true \
		-Dx11=true \
		-Dwayland=true \
		-Dtests=false \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3adc6a389884d19ac3866e20e11bdfa23d2d1062a4da96997b0337b67d31a1a5ca4efcd74f9165bdd28963fcba9f0b5902d7793d15af9fdbee5c32ff600dab9b  libva-utils-2.17.0.tar.gz
"
