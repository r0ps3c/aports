# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=libva-utils
pkgver=2.18.1
pkgrel=0
pkgdesc="Intel VA-API Media Applications and Scripts for libva"
options="!check" # Most tests fail
url="https://github.com/intel/libva-utils"
arch="all"
license="MIT"
makedepends="
	meson
	libva-glx-dev
	libdrm-dev
	wayland-dev
	"
source="https://github.com/01org/libva-utils/archive/$pkgver/libva-utils-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddrm=true \
		-Dx11=true \
		-Dwayland=true \
		-Dtests=false \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
b83ac6395715b1970d56c4b03ac0331f444dad7e4159f00ce5891401c97aaac101a5be2b2123e2fe31350f7c09cd665e38ed01541c1be95b3d3ef822cafd6dea  libva-utils-2.18.1.tar.gz
"
