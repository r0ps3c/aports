# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=tcpreplay
pkgver=4.4.4
pkgrel=0
pkgdesc="Replay captured network traffic"
url="https://tcpreplay.appneta.com/"
arch="all"
license="GPL-3.0-or-later"
makedepends="linux-headers libdnet-dev libpcap-dev tcpdump"
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/tcpreplay/tcpreplay-$pkgver.tar.gz
	skip-tests-require-root.patch"

case "$CARCH" in
arm*)
	options="$options !check" # bus error
	;;
esac

# secfixes:
#   4.4.1-r0:
#     - CVE-2021-45386
#     - CVE-2021-45387
#   4.3.2-r0:
#     - CVE-2019-8381
#     - CVE-2019-8376
#     - CVE-2019-8377
#   4.3.4-r0:
#     - CVE-2020-24265
#     - CVE-2020-24266

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-dynamic-link \
		--enable-local-libopts \
		--disable-libopts-install
	make
}

check() {
	make -C test tcpprep
}

package() {
	make DESTDIR="$pkgdir" install
}

