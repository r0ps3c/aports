#_pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=Minion-Backend-Redis
pkgdesc="Redis backend for Minion job queue"
url="https://metacpan.org/release/Minion-Backend-Redis/"
arch="noarch"
