# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=ruby-tomlib
_gemname=tomlib
pkgver=0.6.0
pkgrel=0
pkgdesc="Fast and standards-compliant TOML parser and generator for Ruby"
url="https://github.com/kgiszczak/tomlib"
arch="all"
license="MIT"
checkdepends="ruby-rspec"
makedepends="ruby-dev"
source="https://github.com/kgiszczak/tomlib/archive/v$pkgver/ruby-tomlib-$pkgver.tar.gz
	fix-requires.patch
	no-simplecov.patch
	"
builddir="$srcdir/tomlib-$pkgver"

build() {
	gem build $_gemname.gemspec
	gem install \
		--local \
		--install-dir dist \
		--ignore-dependencies \
		--no-document \
		--verbose \
		$_gemname
}

check() {
	GEM_PATH='dist' rspec
}

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	cd "$builddir"/dist

	mkdir -p "$gemdir"
	cp -r extensions gems specifications "$gemdir"/

	# Remove unnecessary files...
	find "$gemdir"/extensions/ -name mkmf.log -delete
	cd "$gemdir"/gems/$_gemname-$pkgver
	rm -r ext/ lib/tomlib/*.so
}

