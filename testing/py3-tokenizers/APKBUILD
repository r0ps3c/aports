# Contributor: Patrycja Rosa <alpine@ptrcnull.me>
# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=py3-tokenizers
pkgver=0.15.1
pkgrel=0
pkgdesc="Fast State-of-the-Art Tokenizers optimized for Research and Production"
url="https://github.com/huggingface/tokenizers"
arch="all !s390x !riscv64" # blocked by rust
license="Apache-2.0"
depends="python3"
makedepends="
	bzip2-dev
	cargo
	openssl-dev>3
	py3-gpep517
	py3-maturin
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/huggingface/tokenizers/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/tokenizers-$pkgver/bindings/python"
options="net !check" # requires pulling test data


build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/tokenizers*.whl
}

sha512sums="
427e19e2d58ce20db3dae025c8c8818c988988e22484a1a99526d308695abea883ca805e7eb7a92bb6a297df215f82e04ae3f3e2dedb2da32bcf65d69fc28452  py3-tokenizers-0.15.1.tar.gz
"
