# Contributor: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
# Maintainer: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
pkgname=py3-altair
pkgver=5.0.1
pkgrel=0
pkgdesc="Declarative statistical visualization library for Python"
url="https://github.com/altair-viz/altair"
arch="noarch"
license="BSD-3-Clause"
depends="
	python3
	py3-jinja2
	py3-jsonschema
	py3-numpy
	py3-pandas
	py3-toolz
	py3-packaging
	py3-typing-extensions
	"
checkdepends="black py3-pytest py3-pytest-cov"
makedepends="py3-gpep517 py3-hatchling"
subpackages="$pkgname-pyc"
source="https://github.com/altair-viz/altair/archive/v$pkgver/altair-$pkgver.tar.gz"
builddir="$srcdir/altair-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
		# some tests require dataset: https://github.com/altair-viz/vega_datasets
		local _skipped_tests="
			test_examples
			and not test_api
			and not test_display
			and not test_params"

	# shellcheck disable=SC2116
	python3 -m pytest -k "not $(echo $_skipped_tests)" --ignore=tests/utils/test_schemapi.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/altair-$pkgver-py3-none-any.whl
}

sha512sums="
7e1f3912541d29733bd28ac2596d82a4dd3f8a991e519643cc44ae46100023ad17d7a086fecf641a771877a98e9a2fcd3995ca351d91f8acb6800c1eca67eee3  altair-5.0.1.tar.gz
"
