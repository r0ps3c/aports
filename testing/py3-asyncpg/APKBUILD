# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-asyncpg
pkgver=0.28.0
pkgrel=0
pkgdesc="A fast PostgreSQL Database Client Library for Python/asyncio"
url="https://github.com/MagicStack/asyncpg"
# there is no py3-uvloops (optional) for armhf and ppc64le
arch="all !armhf !ppc64le"
license="Apache-2.0"
depends="py3-async-timeout"
makedepends="
	cython
	py3-build
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
subpackages="$pkgname-doc $pkgname-pyc"
checkdepends="
	postgresql
	postgresql-contrib
	py3-pytest
	py3-pytest-runner
	py3-uvloop
	"
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/a/asyncpg/asyncpg-$pkgver.tar.gz"
builddir="$srcdir/asyncpg-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl

	mv asyncpg asyncpg-off

	testenv/bin/python3 -m pytest
}

package() {
	python -m installer -d "$pkgdir" dist/*.whl

	install -vDm644 README.rst -t "$pkgdir/usr/share/doc/$pkgname/"
}

sha512sums="
904f4e22723cb0ccfda82cefcbea1c1fdaf874fac4fdf9276c31da2e3c9a15d12a64d222c3e15e4021d01bb898078732f5de64909abead4242465e3461a6b0f1  py3-asyncpg-0.28.0.tar.gz
"
