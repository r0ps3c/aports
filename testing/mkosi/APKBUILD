# Contributor: fossdd <fossdd@pwned.life>
# Maintainer: fossdd <fossdd@pwned.life>
pkgname=mkosi
pkgver=25
pkgrel=0
pkgdesc="Build Bespoke OS Images"
url="https://mkosi.systemd.io/"
arch="noarch"
license="LGPL-2.1-or-later"
depends="
	coreutils
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/systemd/mkosi/archive/v$pkgver.tar.gz"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	gpep517 install-wheel --destdir .testenv .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
8dbce982496863cc5eff0ff355a163f4d9ebe269d5bdcf8a6f8bcfcd7ed16d5614a9683d36ed02565ff987c127a96dd32bf6d83e3fc60f8a70b8772cf6ba81b3  mkosi-25.tar.gz
"
