# Maintainer: Jonas <3426-spameier@users.gitlab.alpinelinux.org>
pkgname=texstudio
pkgver=4.8.7
pkgrel=0
pkgdesc="A fully featured editor for LaTeX documents"
url="https://www.texstudio.org"
# disabled elsewhere due to huge size, request if you need it
arch="aarch64 x86_64"
license="GPL-3.0-or-later"
makedepends="
	cmake
	poppler-qt5-dev
	qt6-qt5compat-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	qt6-qttools-dev
	qtermwidget-dev
	quazip-dev
	samurai
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/texstudio-org/texstudio/archive/$pkgver.tar.gz
	qt6.patch
	"
options="!check" # tests fail to build

build() {
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DQT_VERSION_MAJOR=6
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
