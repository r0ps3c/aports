# Maintainer: psykose <alice@ayaya.dev>
pkgname=unmake
pkgver=0.0.10
pkgrel=0
pkgdesc="POSIX Makefile linter"
url="https://github.com/mcandre/unmake"
arch="all"
license="BSD-2-Clause"
makedepends="cargo"
source="$pkgname-$pkgver.tar.gz::https://github.com/mcandre/unmake/archive/refs/tags/v$pkgver.tar.gz"
# cargo fetch
options="net"

prepare() {
	default_prepare

	# no lockfile
	cargo fetch --target="$CTARGET"
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/unmake \
		-t "$pkgdir"/usr/bin
}

sha512sums="
0490f86bc8493f7c20aa0c57cc4df676c06b374377ba08a5d63e262ad6cfe145ea0ae58e94ddc078c3e92cc9f8e629d15dc90f195da842a49b2559d9418daeb9  unmake-0.0.10.tar.gz
"
