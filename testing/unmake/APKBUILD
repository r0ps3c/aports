# Maintainer: psykose <alice@ayaya.dev>
pkgname=unmake
pkgver=0.0.11
pkgrel=0
pkgdesc="POSIX Makefile linter"
url="https://github.com/mcandre/unmake"
arch="all"
license="BSD-2-Clause"
makedepends="cargo"
source="$pkgname-$pkgver.tar.gz::https://github.com/mcandre/unmake/archive/refs/tags/v$pkgver.tar.gz"
# cargo fetch
options="net"

case "$CARCH" in
riscv64) options="$options textrels" ;;
esac

prepare() {
	default_prepare

	# no lockfile
	cargo fetch --target="$CTARGET"
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/unmake \
		-t "$pkgdir"/usr/bin
}

sha512sums="
319a23454ee864e738c8de0284b3e42d4542aed13650178c62f6589dc4abc961916fb2a629d664f63d2da1af29f50ed50a8b9e7aa3935e4c34862fc5046d3f5e  unmake-0.0.11.tar.gz
"
