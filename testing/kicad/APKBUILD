# Maintainer: Marian Buschsieweke <marian.buschsieweke@ovgu.de>
# Contributor: Marian Buschsieweke <marian.buschsieweke@ovgu.de>
pkgname=kicad
pkgver=6.0.10
pkgrel=0
pkgdesc="A Cross Platform and Open Source Electronics Design Automation Suite"
url="https://www.kicad.org/"
# No support for s390x/riscv64 in libcontext (shipped with kicad)
arch="all !riscv64 !s390x"
license="GPL-3.0-or-later"
makedepends="
	boost-dev
	cairo-dev
	chrpath
	cmake
	curl-dev
	glew-dev
	glm-dev
	ngspice-dev
	opencascade-dev
	py3-wxpython
	python3-dev
	samurai
	swig
	wxwidgets-dev
	zlib-dev
	"
depends="python3"
subpackages="$pkgname-doc $pkgname-opencascade"
source="
	https://gitlab.com/kicad/code/kicad/-/archive/$pkgver/kicad-$pkgver.tar.gz
	"

build() {
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKICAD_USE_EGL=ON \
		-DKICAD_USE_OCC=ON \
		-DKICAD_SCRIPTING_WXPYTHON=ON
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=1 \
		ninja test
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	local sitedir=$(python3 -c "import site; print(site.getsitepackages()[0])")
	chrpath -d "$pkgdir/$sitedir"/_pcbnew.so
}

opencascade() {
	pkgdesc="$pkgdesc (opencascade plugin)"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove usr/bin/kicad2step
	amove usr/lib/kicad/plugins/3d/libs3d_plugin_oce.so
}

sha512sums="
6af7e7eb0e2ac3a0230f5708cb347788d7292d1c2be82e3bda4b7224d5a9a16a68cc85a528b357ec0a265cc11273f04e0d87683c56f72f1b7ca03b355a4463e0  kicad-6.0.10.tar.gz
"
