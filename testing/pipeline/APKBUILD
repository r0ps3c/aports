# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
# Maintainer: Matthias Ahouansou <matthias@ahouansou.cz>
pkgname=pipeline
pkgver=2.0.2
pkgrel=0
pkgdesc="Watch YouTube and PeerTube videos in one place"
url="https://gitlab.com/schmiddi-on-mobile/pipeline"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	appstream-glib
	blueprint-compiler
	cargo
	cargo-auditable
	clapper-dev
	desktop-file-utils
	gtk4.0-dev
	libadwaita-dev
	meson
	openssl-dev
	libsoup3-dev
"
subpackages="$pkgname-doc $pkgname-lang"
source="
	$pkgname-$pkgver.tar.gz::https://gitlab.com/schmiddi-on-mobile/pipeline/-/archive/v$pkgver/pipeline-v$pkgver.tar.gz
"
options="net !check" # no tests
builddir="$srcdir/$pkgname-v$pkgver"

prepare() {
	default_prepare

	meson setup build --prefix /usr
	sed -i "s/cargo build/cargo auditable build --frozen/" build/build.ninja
	CARGO_HOME="$builddir"/build/cargo-home cargo fetch --target="$CTARGET" --locked
}

build() {
	meson compile -C build
}

package() {
	meson install -C build --no-rebuild --destdir "$pkgdir"

	install -Dm 644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

sha512sums="
7128844e1881c457456a0dc94a3b033448b62a84fabbcc6b04ec2ffb91ce1f0acb09667b08c82202cb4d4a35e4a14d77243846a9dd52913e9bc67ec9c9848bea  pipeline-2.0.2.tar.gz
"
