# Maintainer: Hoang Nguyen <folliekazetani@protonmail.com>
pkgname=kubeseal
pkgver=0.23.1
pkgrel=0
pkgdesc="One-way encrypted Secrets tool for Kubernetes"
url="https://sealed-secrets.netlify.app/"
arch="all"
license="Apache-2.0"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/bitnami-labs/sealed-secrets/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/sealed-secrets-$pkgver"

# secfixes:
#   0.19.0-r0:
#     - CVE-2022-32149

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build -v \
		-o bin/$pkgname \
		-ldflags "-X main.VERSION=$pkgver" \
		./cmd/kubeseal
}

check() {
	go test ./...
}

package() {
	install -Dm755 bin/$pkgname -t "$pkgdir"/usr/bin
}

sha512sums="
9864c20b6bc13e4f321a3583e7c33d0d7b9ea8946ddeb34f609a10b6930df415249f3e952d7335bcff2f42472abc78df182402f67d792ff26cfda4119bf29cc9  kubeseal-0.23.1.tar.gz
"
