# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=asteroid-calendar
pkgver=0_git20230405
pkgrel=2
_commit="889ddfcea2237897b2e1881f187a6b2a3de29a54"
pkgdesc="Default calendar app for AsteroidOS"
url="https://github.com/AsteroidOS/asteroid-calendar"
# armhf blocked by nemo-qml-plugin-calendar
arch="all !armhf"
license="GPL-3.0-or-later"
depends="
	mapplauncherd
	nemo-qml-plugin-calendar
	nemo-qml-plugin-time
	qt5-qtvirtualkeyboard
	"
makedepends="
	extra-cmake-modules
	qml-asteroid-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	samurai
	"
source="https://github.com/AsteroidOS/asteroid-calendar/archive/$_commit/asteroid-calendar-$_commit.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
76913ab1763738b4a1eee022b95266b027cc39c6c8805bc2f1aa5c09e2376f34d31f0f8ed8d8395914c9c69b286bf50684956db4807b2c2bef0d01eaebd57258  asteroid-calendar-889ddfcea2237897b2e1881f187a6b2a3de29a54.tar.gz
"
