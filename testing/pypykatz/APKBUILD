# Maintainer: Jonas <3426-spameier@users.gitlab.alpinelinux.org>
pkgname=pypykatz
pkgver=0.6.8
pkgrel=0
pkgdesc="Python implementation of Mimikatz"
url="https://github.com/skelsec/pypykatz"
arch="noarch"
license="MIT"
depends="
	py3-aesedb
	py3-aiosmb
	py3-aiowinreg
	py3-minidump
	py3-minikerberos
	py3-msldap
	py3-tqdm
	py3-unicrypto
	py3-winacl
	python3
	"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skelsec/pypykatz/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no tests provided

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" dist/*.whl
}

sha512sums="
1353ecf288098ff07b5a4fa31b8293034fd108821a1cc571522ab37b2d33450ef6e69c32b501e01ff96dcb4c7956a33fff35d40efd1cb0e19959d05115d6cfa1  pypykatz-0.6.8.tar.gz
"
