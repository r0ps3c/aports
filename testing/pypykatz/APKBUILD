# Maintainer: Jonas <3426-spameier@users.gitlab.alpinelinux.org>
pkgname=pypykatz
pkgver=0.6.11
pkgrel=0
pkgdesc="Python implementation of Mimikatz"
url="https://github.com/skelsec/pypykatz"
arch="noarch"
license="MIT"
depends="
	py3-aesedb
	py3-aiosmb
	py3-aiowinreg
	py3-minidump
	py3-minikerberos
	py3-msldap
	py3-tqdm
	py3-unicrypto
	py3-winacl
	python3
	"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skelsec/pypykatz/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no tests provided

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
2cc6bcc521677be9a9d3b30a7fb6dfe823265f8aa40f4f964e97146fb312590d01e4e5597527488718010ae1424b85b291bdf0a165d516eb28edbc51a548a9f4  pypykatz-0.6.11.tar.gz
"
