# Maintainer: Jonas <3426-spameier@users.gitlab.alpinelinux.org>
pkgname=pypykatz
pkgver=0.6.6
pkgrel=1
pkgdesc="Python implementation of Mimikatz"
url="https://github.com/skelsec/pypykatz"
arch="noarch"
license="MIT"
depends="
	py3-aesedb
	py3-aiosmb
	py3-aiowinreg
	py3-minidump
	py3-minikerberos
	py3-msldap
	py3-tqdm
	py3-unicrypto
	py3-winacl
	python3
	"
makedepends="
	py3-gpep517
	py3-wheel
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/skelsec/pypykatz/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no tests provided

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" dist/*.whl
}

sha512sums="
1e3dbe6a0de2ac71efde35e0cfe31b0b5a25dce466e052f930bc532dca0641dcd3dd599873c92cb626f4b6d07169de86ebccacab31b4b5b0538d580a128b64bf  pypykatz-0.6.6.tar.gz
"
