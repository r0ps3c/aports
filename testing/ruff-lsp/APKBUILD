# Maintainer: Hugo Osvaldo Barrera <hugo@whynothugo.nl>
pkgname=ruff-lsp
pkgver=0.0.32
pkgrel=0
pkgdesc="Language Server Protocol implementation for Ruff"
url="https://github.com/charliermarsh/ruff-lsp"
# ruff
arch="aarch64 x86_64"
license="MIT"
depends="
	py3-gls
	py3-lsprotocol
	py3-typing-extensions
	ruff
	"
makedepends="py3-gpep517 py3-installer py3-hatchling"
checkdepends="py3-lsp-jsonrpc py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/charliermarsh/ruff-lsp/archive/v$pkgver/ruff-lsp-$pkgver.tar.gz"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m unittest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/ruff_lsp-$pkgver-py3-none-any.whl
}

sha512sums="
c9d47b9253b65c18123c059fa01fa93f5e6067c335c4a084b4a196ae37f157fe0cf7aaef133f343ea6c5dfd9d6f4bb485162f04d2df5627a0469642e2112f4a1  ruff-lsp-0.0.32.tar.gz
"
