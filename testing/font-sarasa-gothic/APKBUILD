# Maintainer: Hoang Nguyen <folliekazetani@protonmail.com>
pkgname=font-sarasa-gothic
pkgver=0.40.4
pkgrel=0
pkgdesc="CJK programming font based on Iosevka and Source Han Sans"
url="https://github.com/be5invis/Sarasa-Gothic"
arch="noarch"
options="!check" # no testsuite
license="OFL-1.1"
depends="fontconfig"
makedepends="libarchive-tools"
source="https://github.com/be5invis/Sarasa-Gothic/releases/download/v$pkgver/sarasa-gothic-ttc-$pkgver.7z"
builddir="$srcdir"

package() {
	bsdtar -xf "sarasa-gothic-ttc-$pkgver.7z" -C "$builddir"/
	install -Dm644 "$builddir"/*.ttc \
		-t "$pkgdir/usr/share/fonts/${pkgname#font-}"
}

sha512sums="
d01b4ac2e9d89c48fb7ded20d1f336a879f94d5582415cbced5dff418ebabc447cf548d30a3e61d609473194ad257c39e896275f49a8cf14ff21a25591958f99  sarasa-gothic-ttc-0.40.4.7z
"
