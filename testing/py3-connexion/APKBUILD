pkgname=py3-connexion
_pkgname=connexion
pkgver=2.14.1
pkgrel=3
pkgdesc="Swagger/OpenAPI First framework for Python on top of Flask with automatic endpoint validation & OAuth2 support"
url="https://github.com/spec-first/connexion"
arch="noarch !ppc64le !armhf !riscv64" # limited by missing depends
license="Apache-2.0"
checkdepends="
	py3-aiohttp-jinja2
	py3-aiohttp-remotes
	py3-decorator
	py3-itsdangerous
	py3-pytest
	py3-pytest-aiohttp
	py3-pytest-asyncio
	py3-pytest-cov
	py3-swagger-ui-bundle
	py3-testfixtures
	py3-toml
	"
makedepends="
	py3-flake8
	py3-setuptools
	"
depends="
	py3-clickclick
	py3-flask
	py3-httpx
	py3-inflection
	py3-jinja2
	py3-jsonschema
	py3-packaging
	py3-requests
	py3-starlette
	py3-typing-extensions
	py3-werkzeug
	py3-yaml
	python3
	"
source="https://github.com/spec-first/connexion/archive/$pkgver/$_pkgname-$pkgver.tar.gz
	pytest-cov-deprange.patch
	"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

check() {
	# seems to work with pytest >7
	sed -i 's/pytest>=6,<7/pytest/' setup.py

	python3 setup.py test
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

