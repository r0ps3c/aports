# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=grcov
pkgver=0.8.15
pkgrel=0
pkgdesc="Rust tool to collect and aggregate code coverage data"
url="https://github.com/mozilla/grcov"
arch="x86_64 armv7 armhf aarch64 x86 ppc64le" # Limited by cargo
license="MPL-2.0"
depends="gcc" # gcov
makedepends="cargo"
options="net !check" # Failing due to utf-8 (locale?)
source="$pkgname-$pkgver.tar.gz::https://github.com/mozilla/grcov/archive/v$pkgver.tar.gz"

export CARGO_REGISTRIES_CRATES_IO_PROTOCOL="sparse"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/grcov -t "$pkgdir"/usr/bin
}

sha512sums="
9a9c52d5b3dcc165c9be79cee4caa3710cf6161054071aebb5978a3de705f71ea30c096106acf4e28acdbeccd0bfdcbc455dbf6031c77a9e8e925e64322714aa  grcov-0.8.15.tar.gz
"
