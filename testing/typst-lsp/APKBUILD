# Maintainer: psykose <alice@ayaya.dev>
pkgname=typst-lsp
pkgver=0.3.2
pkgrel=0
pkgdesc="Language server for typst"
url="https://github.com/nvarner/typst-lsp"
# typst, rust-analyzer
arch="aarch64 ppc64le x86_64"
license="MIT"
depends="rust-analyzer"
makedepends="cargo"
source="$pkgname-$pkgver.tar.gz::https://github.com/nvarner/typst-lsp/archive/refs/tags/v$pkgver.tar.gz"
options="net !check" # no tests

export CARGO_REGISTRIES_CRATES_IO_PROTOCOL="sparse"

case "$CARCH" in
riscv64)
	options="$options textrels"
	;;
esac

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo build --release --frozen
}

package() {
	install -Dm755 target/release/typst-lsp -t "$pkgdir"/usr/bin/
}

sha512sums="
781039481bb91a4c153f396303f95e685e45fb6bfddffbd55090fa1342ff733e05bf089e7abba3849796ada8987b16d172340c145b6d389bd4b140bb71d25291  typst-lsp-0.3.2.tar.gz
"
