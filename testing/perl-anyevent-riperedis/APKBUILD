check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	# 06-subs.t and 08-eval.t are flaky
	local i; for i in $(seq 0 3); do
		[ $i -eq 0 ] || msg "Retrying ($i/3)..."
		timeout 90s make test && return 0
		sleep 3
	done
	return 1
}

