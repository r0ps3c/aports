maintainer="fossdd <fossdd@pwned.life>"
pkgname=wayback
pkgver=0_git20250708
_commit=b73331578451f3a65b305f1d2adb7d7785260ec3
pkgrel=0
pkgdesc="experimental X11 compatibility layer"
url="https://github.com/kaniini/wayback/"
arch="all"
license="MIT"
makedepends="
	meson
	scdoc
	wayland-protocols-dev
	wlroots-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/kaniini/wayback/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # no tests

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
67442ab296873761f14d67f1f3821b79499913c08ecad7d540a21c95b0e5ca01b665a765fbad6c3ed04207fd961dc2462bde59ea09c0b508f81a936b6b24031d  wayback-0_git20250708.tar.gz
"
