# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=py3-ovos-phal-plugin-connectivity-events
pkgver=0.0.3a2
pkgrel=0
pkgdesc="Monitors network state and exposes it via messagebus"
url="https://github.com/OpenVoiceOS/ovos-PHAL-plugin-connectivity-events"
arch="noarch"
license="Apache-2.0"
depends="
	py3-ovos-bus-client
	py3-ovos-plugin-manager
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/OpenVoiceOS/ovos-PHAL-plugin-connectivity-events/archive/refs/tags/V$pkgver.tar.gz"
builddir="$srcdir/ovos-PHAL-plugin-connectivity-events-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b53e8a4a4c05258f412ff5d146d898533164f50898c66c9a14328aec4f82938c624fefd4893ff520724e6a221d0350da5c20b48dcb3b39c0e2f7aba43372399c  py3-ovos-phal-plugin-connectivity-events-0.0.3a2.tar.gz
"
