# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=inko
pkgver=0.18.1_git20250710
_gitrev=4fe2883c4881fe41b284d3ed20e018d06cd03e69
pkgrel=0
_llvmver=20
pkgdesc="Language for building concurrent software"
url="https://inko-lang.org/"
arch="aarch64 x86_64"
license="MPL-2.0"
depends="
	cmd:cc
	cmd:git
	musl-dev
	"
makedepends="
	cargo
	cargo-auditable
	llvm$_llvmver-dev
	"
subpackages="$pkgname-doc"
source="https://github.com/inko-lang/inko/archive/$_gitrev/inko-$_gitrev.tar.gz
	cargo-auditable.patch
	"
builddir="$srcdir/$pkgname-$_gitrev"

# use system llvm
export LLVM_SYS_181_PREFIX=/usr/lib/llvm$_llvmver

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	make build
}

check() {
	cargo test --frozen
}

package() {
	make DESTDIR="$pkgdir" install
}

