# Contributor: viest <dev@service.viest.me>
# Maintainer: viest <dev@service.viest.me>
pkgname=php82-pecl-xlswriter
_extname=xlswriter
pkgver=1.5.3
pkgrel=0
pkgdesc="PHP 8.2 extension for creating and reader XLSX files - PECL"
url="https://pecl.php.net/package/xlswriter"
arch="all"
license="BSD-2-Clause"
_phpv=82
_php=php$_phpv
depends="$_php-common"
makedepends="$_php-dev zlib-dev"
source="php-pecl-$_extname-$pkgver.tar.gz::https://pecl.php.net/get/$_extname-$pkgver.tgz"
builddir="$srcdir"/$_extname-$pkgver

build() {
	phpize$_phpv
	./configure \
		--enable-reader \
		--prefix=/usr \
		--with-php-config=/usr/bin/php-config$_phpv
	make
}

check() {
	rm -f tests/validation_limiting_to_a_single_or_range_cell.phpt \
		tests/validation_limiting_input_to_a_value_in_a_dropdown_list.phpt
	make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test TESTS=--show-diff
}

package() {
	make INSTALL_ROOT="$pkgdir" install
	local _confdir="$pkgdir"/etc/$_php/conf.d
	install -d $_confdir
	echo "extension=$_extname" > $_confdir/$_extname.ini
}

sha512sums="
4cbc6364cc3b712ef05002136c96eb522ba9dc6ad210b85addb664701ac36fcca3b77a8bbe6f271d3aee5cd5070813b3613c8caa73ea346e16045559ea76d364  php-pecl-xlswriter-1.5.3.tar.gz
"
