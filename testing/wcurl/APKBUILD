# Contributor: fossdd <fossdd@pwned.life>
# Maintainer: fossdd <fossdd@pwned.life>
pkgname=wcurl
pkgver=0_git20240702
_commit=e4a7f678f4b9ba473fc51b51c2f0e02c74134d3c
pkgrel=0
pkgdesc="Simple wrapper around curl to easily download files"
url="https://salsa.debian.org/debian/wcurl"
arch="noarch"
license="curl"
depends="curl"
subpackages="$pkgname-doc"
source="https://salsa.debian.org/debian/wcurl/-/archive/$_commit/wcurl-$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # no tests

package() {
	install -Dvm755 wcurl -t "$pkgdir"/usr/bin/
	install -Dvm644 wcurl.1 -t "$pkgdir"/usr/share/man/man1/
	install -Dvm644 README.md -t "$pkgdir"/usr/share/doc/$pkgname/
	install -Dvm644 LICENSE -t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
0ca0b668ea95c6f54469d75da208852689bab3b560f555be6373228d59b3489f94781649442cfd6ee8c288ba56ff648516fbc3e5ddf517de0b13daaf9c9ddbff  wcurl-e4a7f678f4b9ba473fc51b51c2f0e02c74134d3c.tar.gz
"
