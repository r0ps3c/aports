# Contributor: fossdd <fossdd@pwned.life>
# Maintainer: fossdd <fossdd@pwned.life>
pkgname=wcurl
pkgver=2024.07.07
_pkgver=${pkgver//./-}
pkgrel=0
pkgdesc="Simple wrapper around curl to easily download files"
url="https://salsa.debian.org/debian/wcurl"
arch="noarch"
license="curl"
depends="curl"
checkdepends="shunit2 coreutils"
subpackages="$pkgname-doc"
source="https://salsa.debian.org/debian/wcurl/-/archive/$_pkgver/wcurl-$_pkgver.tar.gz"
builddir="$srcdir/$pkgname-$_pkgver"

check() {
	./tests/tests.sh
}

package() {
	install -Dvm755 wcurl -t "$pkgdir"/usr/bin/
	install -Dvm644 wcurl.1 -t "$pkgdir"/usr/share/man/man1/
	install -Dvm644 README.md -t "$pkgdir"/usr/share/doc/$pkgname/
	install -Dvm644 LICENSE -t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
1c34a695b4ae5d5ac1f6a3edff3c4e664aad4b652100747284d6868755daa97aa5c1f67e1b41194582094db8da305ded8ca949c2b9b8c9af281ae173132462e5  wcurl-2024-07-07.tar.gz
"
