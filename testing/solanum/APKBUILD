# Contributor:
# Maintainer: nadvagauser <nadvagauser+alpine@proton.me>
pkgname=solanum
pkgver=5.0.0
pkgrel=0
pkgdesc="A pomodoro timer for the GNOME desktop"
url="https://gitlab.gnome.org/World/Solanum"
arch="all !s390x !riscv64" # GTK4
license="GPL-3.0-or-later"
makedepends="
	blueprint-compiler
	cargo
	glib-dev
	gst-plugins-bad-dev
	gstreamer-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	"
checkdepends="
	appstream-glib
	desktop-file-utils
	"
subpackages="$pkgname-lang"
source="
	https://gitlab.gnome.org/World/Solanum/-/archive/$pkgver/Solanum-$pkgver.tar.gz
	appdata.patch
	update-cargo.patch
	"
builddir="$srcdir/Solanum-$pkgver"


build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
