# Contributor: Grigory Kirillov <txgk@bk.ru>
# Maintainer: Grigory Kirillov <txgk@bk.ru>
pkgname=libsemigroups
pkgver=2.7.0
pkgrel=0
pkgdesc="Library for computing semigroups and monoids"
url="https://github.com/libsemigroups/libsemigroups"
arch="all"
license="GPL-3.0-or-later"
makedepends="eigen-dev fmt-dev"
subpackages="$pkgname-static $pkgname-dev"
source="https://github.com/libsemigroups/libsemigroups/releases/download/v$pkgver/libsemigroups-$pkgver.tar.gz"

build() {
	export CXXFLAGS="${CXXFLAGS/-Os/-O3}" # gotta go fast

	./configure \
		--target="$CTARGET" \
		--build="$CBUILD" \
		--host="$CHOST" \
		--prefix=/usr \
		--enable-eigen \
		--enable-fmt \
		--with-external-eigen \
		--with-external-fmt
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
0304b604331eb82b6331155337f5362a7382c50e827c2021ecc1661a093be238c1f5317cd5941c0200eca21281716bc1f9857d86b9a47bf4b678a5ac95312c27  libsemigroups-2.7.0.tar.gz
"
