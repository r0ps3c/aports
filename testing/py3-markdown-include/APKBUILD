# Maintainer: Haelwenn (lanodan) Monnier <contact+alpine@hacktivis.me>
pkgname=py3-markdown-include
_pkgreal=markdown-include
pkgver=0.8.0
pkgrel=0
pkgdesc="A Python-Markdown extension which provides an 'include' function"
url="https://github.com/cmacmackin/markdown-include"
arch="noarch"
license="GPL-3.0-or-later"
depends="python3 py3-markdown"
checkdepends="py3-pytest"
makedepends="py3-gpep517 py3-setuptools py3-setuptools_scm py3-wheel"
source="https://files.pythonhosted.org/packages/source/${_pkgreal:0:1}/$_pkgreal/$_pkgreal-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
1288b66b3faf665d7886cb5d28372335286528b9bfbf5b7320128bf5ec21590533dbe4aa0466f339f24701da9f33cf3615ef5a7c227665513910bf26af9e6007  markdown-include-0.8.0.tar.gz
"
