# Contributor: Grigory Kirillov <txgk@bk.ru>
# Maintainer: Celeste <cielesti@protonmail.com>
pkgname=nauty
pkgver=2.8.9
_pkgver=${pkgver//./_}
pkgrel=0
pkgdesc="Programs for computing automorphism groups of graphs and digraphs"
url="https://pallini.di.uniroma1.it/"
arch="all"
license="Apache-2.0"
subpackages="$pkgname-dev $pkgname-libs"
source="https://pallini.di.uniroma1.it/nauty$_pkgver.tar.gz
	fix-test-uniqg.patch
	"
builddir="$srcdir/$pkgname$_pkgver"

build() {
	export CFLAGS="${CFLAGS/-Os/-O3}" # gotta go fast

	./configure \
		--target=$CTARGET \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-generic
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

libs() {
	default_libs

	amove usr/lib/libnauty*-*.*.so
}

sha512sums="
