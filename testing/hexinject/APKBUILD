pkgname=hexinject
pkgver=1.6
pkgrel=2
pkgdesc="A very versatile packet injector and sniffer"
url="https://hexinject.sourceforge.net/"
arch="all"
license="BSD"
makedepends="libpcap-dev"
source="https://downloads.sourceforge.net/hexinject/hexinject-$pkgver.tar.gz
	fix-build.patch
	"
builddir="$srcdir/$pkgname"
options="!check"

build() {
	make
}

package() {
	install -Dvm755 hexinject prettypacket hex2raw \
		-t "$pkgdir"/usr/bin/
}

