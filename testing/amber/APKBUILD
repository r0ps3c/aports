# Contributor: Guy Godfroy <guy.godfroy@gugod.fr>
# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=amber
_pkgname=Amber
pkgver=0.3.2
_pkgver=$pkgver-alpha # upstream releases versions suffixed by -alpha for now
pkgrel=0
pkgdesc="Programming language compiled to bash"
url="https://amber-lang.com"
arch="all"
license="GPL-3.0-or-later"
depends="bc bash"
makedepends="cargo cargo-auditable"
source="$pkgname-$pkgver.tar.gz::https://github.com/Ph0enixKM/Amber/archive/refs/tags/$_pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$_pkgver"
options="net"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/amber -t "$pkgdir"/usr/bin
}

sha512sums="
851598c8c972ec0491d187c62468188286c32a65dad4606a8724877b5c07a9f333f641221b5adb4c426f2b085430c310a2b4272fa674453b21d4d447572c454b  amber-0.3.2.tar.gz
"
