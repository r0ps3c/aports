_commit=562706946871d1c994f60361883269916cbaa08e
pkgrel=0
pkgdesc="Compression algorithms for Hare"
url="https://git.sr.ht/~sircmpwn/hare-compress"
arch="noarch !armhf !armv7 !ppc64le !s390x !x86" # blocked by hare
