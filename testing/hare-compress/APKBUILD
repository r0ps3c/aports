makedepends="hare"
source="$pkgname-$_commit.tar.gz::https://git.sr.ht/~sircmpwn/hare-compress/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	make -j1 PREFIX=/usr
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

