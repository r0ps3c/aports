# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=py3-ovos-config
pkgver=0.2.0
pkgrel=0
pkgdesc="OVOS configuration manager library"
url="https://github.com/OpenVoiceOS/ovos-config"
arch="noarch"
license="Apache-2.0"
depends="
	py3-combo-lock
	py3-dateutil
	py3-ovos-utils
	py3-rich-click
	py3-watchdog
	py3-yaml
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/OpenVoiceOS/ovos-config/archive/$pkgver/ovos-config-$pkgver.tar.gz"
builddir="$srcdir/ovos-config-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b9432af67bb0feacf00a8d1d9bac44266c35ffb17d5c280221ad62f231219f176e93d418526f00f3e8f1d1c990b057642a3728ab553b3cd57eb45bb7eac0f947  ovos-config-0.2.0.tar.gz
"
