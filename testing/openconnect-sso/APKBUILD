# Contributor: Patrycja Rosa <alpine@ptrcnull.me>
# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=openconnect-sso
pkgver=0.8.0
pkgrel=0
pkgdesc="Wrapper script for OpenConnect supporting Azure AD (SAMLv2) authentication to Cisco SSL-VPNs"
url="https://github.com/vlaci/openconnect-sso"
# armhf, ppc64le, riscv64, s390x: blocked by py3-pyqt6-webengine
arch="noarch !armhf !ppc64le !riscv64 !s390x"
license="GPL-3.0-or-later"
depends="
	py3-attrs
	py3-colorama
	py3-keyring
	py3-lxml
	py3-otp
	py3-prompt_toolkit
	py3-pyqt6-webengine
	py3-pysocks
	py3-qt6
	py3-requests
	py3-structlog
	py3-xdg
	"
makedepends="py3-gpep517 py3-poetry-core poetry"
subpackages="$pkgname-pyc"
source="https://github.com/vlaci/openconnect-sso/archive/v$pkgver/openconnect-sso-$pkgver.tar.gz"
builddir="$srcdir/openconnect-sso-$pkgver"
options="!check" # no tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
3e9eb3c5f0b3c2facdd92865191640e3fc70a81fd4acd66dfe3c68df2ecdbf3f36e20a1b7e1ac9a3c71a2d3d6d103eaaca42276b86b3a0097692b71e35ce2354  openconnect-sso-0.8.0.tar.gz
"
