# Maintainer: Thomas Kienlen <kommander@laposte.net>
pkgname=ruby-build
pkgver=20230512
pkgrel=0
pkgdesc="Compile and install Ruby"
url="https://github.com/rbenv/ruby-build"
arch="noarch"
license="MIT"
depends="
	bash
	"
subpackages="$pkgname-runtime:runtime"
source="$pkgname-$pkgver.tar.gz::https://github.com/rbenv/ruby-build/archive/v$pkgver.tar.gz"
options="!check" # No test suite
install="$pkgname.post-install"

package() {
	PREFIX="$pkgdir/usr" ./install.sh
}

runtime() {
	pkgdesc="ruby-build runtime dependencies"

	depends="
		autoconf
		coreutils
		libffi-dev
		linux-headers
		gdbm-dev
		openssl-dev>3
		readline-dev
		yaml-dev
		zlib-dev
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
72d02e1a952d386fe9215e7d5a053a81fce4a7de2a1bece9d32f0285a22c07a74abffcfc7583605e7e4baabdbc6adda53c78ec07dec08194ba5659fb47421b1d  ruby-build-20230512.tar.gz
"
