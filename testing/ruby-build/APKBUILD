# Maintainer: Thomas Kienlen <kommander@laposte.net>
pkgname=ruby-build
pkgver=20231107
pkgrel=0
pkgdesc="Compile and install Ruby"
url="https://github.com/rbenv/ruby-build"
arch="noarch"
license="MIT"
depends="
	bash
	"
subpackages="
	$pkgname-doc
	$pkgname-runtime
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/rbenv/ruby-build/archive/v$pkgver.tar.gz"
options="!check" # No test suite
install="$pkgname.post-install"

package() {
	PREFIX="$pkgdir/usr" ./install.sh
}

runtime() {
	pkgdesc="ruby-build runtime dependencies"

	depends="
		autoconf
		coreutils
		libffi-dev
		linux-headers
		gdbm-dev
		openssl-dev>3
		readline-dev
		yaml-dev
		zlib-dev
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
2c569fd75acf5d60beebc83e9f4c8b93a0ed670d9650a758dbb8605e25342f1f1fa42f7398d721e3178a1023668a772d33876e7f851a285ad351a1c0d154f062  ruby-build-20231107.tar.gz
"
