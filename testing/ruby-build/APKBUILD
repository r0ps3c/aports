pkgname=ruby-build
pkgver=20230914.1
pkgrel=0
pkgdesc="Compile and install Ruby"
url="https://github.com/rbenv/ruby-build"
arch="noarch"
license="MIT"
depends="
	bash
	"
subpackages="$pkgname-runtime:runtime"
source="$pkgname-$pkgver.tar.gz::https://github.com/rbenv/ruby-build/archive/v$pkgver.tar.gz"
options="!check" # No test suite
install="$pkgname.post-install"

package() {
	PREFIX="$pkgdir/usr" ./install.sh
}

runtime() {
	pkgdesc="ruby-build runtime dependencies"

	depends="
		autoconf
		coreutils
		libffi-dev
		linux-headers
		gdbm-dev
		openssl-dev>3
		readline-dev
		yaml-dev
		zlib-dev
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
3f3e1b0675c8304d12f2760fb9a7e3424be2e5eb6df27e6b9d5bcf8a2e10b14b2f3b4ca468edf1099e85997de58f415d8ecfe48b5eb6c4acfd6c475d247c3fcd  ruby-build-20230914.1.tar.gz
"
