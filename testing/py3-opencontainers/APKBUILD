_pyname=opencontainers
pkgname="py3-$_pyname"
pkgver=0.0.14
pkgrel=0
arch="noarch"
pkgdesc="Python module for oci specifications"
url="https://pypi.python.org/project/$_pyname"
license="MPL-2.0"
depends="
	py3-requests
	"
makedepends="
	py3-setuptools
	py3-installer
	py3-gpep517
	py3-wheel
	"
checkdepends="
	py3-pytest
	"
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
b0f0edb8d11c825e7bd64b0c38fb227823de0065dc35703cc930e5ad3a5c875abe5a8c8e16f34331ca2246f48887d34ab9749ca3b547216e0ece1aa7659dc845  py3-opencontainers-0.0.14.tar.gz
"
