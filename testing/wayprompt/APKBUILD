# Contributor: Maarten van Gompel <proycon@anaproy.nl>
# Maintainer: Maarten van Gompel <proycon@anaproy.nl>
pkgname=wayprompt
pkgver=0.1.2
pkgrel=0
pkgdesc="multi-purpose prompt tool for Wayland "
url="https://git.sr.ht/~leon_plickat/wayprompt"
arch="aarch64 x86_64" # blocked by zig
license="GPL-3.0-only"
makedepends="
	fcft-dev
	libxkbcommon-dev
	wayland-dev
	wayland-protocols
	zig
	"
subpackages="$pkgname-doc"
source="https://codeberg.org/ifreund/waylock/releases/download/v$pkgver/waylock-$pkgver.tar.gz"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~leon_plickat/wayprompt/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"
# !check: no test suite
# net: downloads dependencies defined in build.zig.zon
options="!check net"

build() {
	DESTDIR='.dest' zig build \
		--prefix /usr \
		-Doptimize=ReleaseSafe \
		--prefix /usr install
}

package() {
	mkdir -p "$pkgdir"
	cp -r .dest/* "$pkgdir"/
}

sha512sums="
b9599b25bc83ed2fc5da4573a2bf687ccb856cb9a16ee5e2946668c252264743a5b5b67813115b1240e0bb7e4ca89ac24f7a84bc9aaee25482c2ee787e127f0e  wayprompt-0.1.2.tar.gz
"
