# Contributor: David Demelier <markand@malikania.fr>
# Maintainer: David Demelier <markand@malikania.fr>
pkgname=ardour
pkgver=6.9.0
pkgrel=6
pkgdesc="professional-grade digital audio workstation"
url="https://ardour.org/"
arch="all !ppc64le" # Does not build on ppc64le.
license="GPL-2.0-or-later"
makedepends="
	alsa-lib-dev
	atkmm-dev
	aubio-dev
	boost-dev
	fftw-dev
	gtk+2.0-dev
	gtkmm-dev
	itstool
	jack-dev
	libarchive-dev
	liblo-dev
	libpng-dev
	libsamplerate-dev
	libsigc++-dev
	libsndfile-dev
	lilv-dev
	lrdf-dev
	lv2-dev
	pulseaudio-dev
	python3
	readline-dev
	redland-dev
	rubberband-dev
	serd-dev
	sratom-dev
	taglib-dev
	vamp-sdk-dev
	fluidsynth-dev
	hidapi-dev
	"
# the tarballs get randomly removed- ping someone in #alpine-devel to update
# this
source="https://dev.alpinelinux.org/archive/ardour/Ardour-$pkgver.tar.bz2"
builddir="$srcdir/Ardour-$pkgver"

build() {
	python3 waf configure \
		--prefix=/usr \
		--cxx11 \
		--keepflags \
		--optimize \
		--freedesktop \
		--no-phone-home \
		--with-backends=pulseaudio,jack,alsa,dummy
		#FIXME: add missing dependencies
		# --use-external-libs
	python3 waf build
}

check() {
	python3 waf test
}

package() {
	python3 waf install --destdir="$pkgdir"

	mkdir -p "$pkgdir"/usr/share/metainfo
	mv "$pkgdir"/usr/share/appdata/*.xml "$pkgdir"/usr/share/metainfo
	rmdir "$pkgdir"/usr/share/appdata
}

sha512sums="
ace45f5bfe6d0c9e4bb1712ae53ebaee2f15f883045650cae3ddcae251d4fd2f645ba745effb739b47c73a0568ae9e8ae443b711dd610584e04575fd9046b234  Ardour-6.9.0.tar.bz2
"
