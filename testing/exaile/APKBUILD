# Maintainer: psykose <alice@ayaya.dev>
pkgname=exaile
pkgver=4.1.2
pkgrel=0
pkgdesc="Music Player for GTK+"
url="https://exaile.org/"
# s390x: fails tests
# x86: py3-bsddb3
arch="noarch !x86 !s390x"
license="GPL-2.0-or-later"
depends="
	gstreamer
	gst-plugins-base
	gst-plugins-good
	gtk+3.0
	py3-bsddb3
	py3-cairo
	py3-dbus
	py3-gobject3
	py3-gst
	py3-mutagen
	"
makedepends="
	gettext-dev
	help2man
	"
checkdepends="
	py3-pytest
	xvfb-run
	"
subpackages="
	$pkgname-lang
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-fish-completion
	"
source="https://github.com/exaile/exaile/releases/download/$pkgver/exaile-$pkgver.tar.gz"

build() {
	make PREFIX=/usr
}

check() {
	xvfb-run -a make test
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" FISHCOMPDIR="/usr/share/fish/completions" install
}

sha512sums="
926f6a975020f566e05174acc9e87c5f8211ee6e5b14d985a0e295d1947b5a0dc4ab140e9a8b7bc153b4acf4a6dece6e88c147b82b2b21cced3866c1b7657ea9  exaile-4.1.2.tar.gz
"
