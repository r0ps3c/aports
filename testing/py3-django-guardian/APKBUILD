_pyname=django-guardian
pkgname="py3-$_pyname"
pkgver=2.4.0
pkgrel=0
arch="noarch"
pkgdesc="Implementation of per object permissions on top of Djangoâ€™s authorization backend"
url="https://pypi.python.org/project/$_pyname"
license="MIT"
depends="
	py3-django
	py3-django-environ
	"
makedepends="
	py3-setuptools
	py3-wheel
	py3-gpep517
	py3-installer
	"
checkdepends="
	py3-pytest
	py3-pytest-django
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest -v
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
