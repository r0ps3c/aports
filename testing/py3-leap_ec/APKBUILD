257.patch"
builddir="$srcdir/LEAP-$pkgver"
options="!check" # missing dependencies | skip for now

build() {
	python3 setup.py build
}

check() {
	pytest
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

