options="!check" # is a font

build() {
	return 0
}

package() {
	cd "$srcdir"
	for font in *.ttf; do
		install -Dm644 "$font" "$pkgdir/usr/share/fonts/${pkgname#font-}/${font#font-teluguvijayam-"$pkgver"-}"
	done
}

