# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=sfwbar
pkgver=1.0_beta11
pkgrel=0
pkgdesc="Sway Floating Window Bar"
url="https://github.com/LBCrion/sfwbar"
arch="all"
license="GPL-3.0-only AND MIT"
makedepends="
	gtk+3.0-dev
	gtk-layer-shell-dev
	json-c-dev
	meson
	"
subpackages="$pkgname-doc"
source="https://github.com/LBCrion/sfwbar/archive/v$pkgver/sfwbar-$pkgver.tar.gz"
options="!check"  # no tests provided

build() {
	abuild-meson -Db_lto=true . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
390d6018183738a0c3e6321537a3ba8b477a0932b8638115e9617c1f08fefad481c0c7385784178abe0282a2d1318aa288ab5b097da45229823653632d116bb8  sfwbar-1.0_beta11.tar.gz
"
