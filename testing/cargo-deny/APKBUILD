# Maintainer: psykose <alice@ayaya.dev>
pkgname=cargo-deny
pkgver=0.13.8
pkgrel=0
pkgdesc="Cargo plugin for linting dependencies"
url="https://github.com/EmbarkStudios/cargo-deny"
arch="all"
license="Apache-2.0 OR MIT"
makedepends="
	cargo
	libgit2-dev
	libssh2-dev
	openssl-dev
	zlib-dev
	zstd-dev
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/EmbarkStudios/cargo-deny/archive/refs/tags/$pkgver.tar.gz"
options="!check" # tests seem to fail inside git

export LIBSSH2_SYS_USE_PKG_CONFIG=1

case "$CARCH" in
riscv64)
	options="$options textrels"
	;;
esac

export CARGO_REGISTRIES_CRATES_IO_PROTOCOL="sparse"

prepare() {
	default_prepare

	# Rust target triple.
	local target=$(rustc -vV | sed -n 's/host: //p')

	# Build against system-provided libzstd.
	mkdir -p .cargo
	cat >> .cargo/config.toml <<-EOF
		[target.$target]
		zstd = { rustc-link-lib = ["zstd"] }
	EOF

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo build --release --frozen --no-default-features
}

check() {
	cargo test --frozen --no-default-features
}

package() {
	install -Dm755 target/release/cargo-deny -t "$pkgdir"/usr/bin/
}

sha512sums="
e775210cad6296722c5a13f940027c00424d069d3c0b04ec299ae4593994955bed724071dcf76120ea68969bce5a9654c9aa2d40d9df7afdcd3735aa0385ba2b  cargo-deny-0.13.8.tar.gz
"
