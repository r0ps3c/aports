# Maintainer: Steve McMaster <code@mcmaster.io>
pkgname=snort-extra
pkgver=3.1.69.0
pkgrel=0
pkgdesc="External plugins for snort"
url="https://github.com/snort3/snort3_extra"
# snort
arch="all !ppc64le !riscv64"
license="GPL-2.0-only"
makedepends="
	daq-dev
	cmake
	samurai
	snort-dev
	"
source="https://www.snort.org/downloads/snortplus/snort3_extra-$pkgver.tar.gz"
builddir="$srcdir/snort3_extra-$pkgver"
options="!check" # doesn't have any tests

build() {
	CXXFLAGS="$CXXFLAGS -flto=auto" \
	cmake -B build -G Ninja -Wno-dev \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c8895bb7ca05cf2f03f605403ab17306485e2e7dd29e483d08e0714d6667d4efde5c29a89615ef518d58b787546b522e4ab08486184d53c3362f061caf0a4db8  snort3_extra-3.1.69.0.tar.gz
"
