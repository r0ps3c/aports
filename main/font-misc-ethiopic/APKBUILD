pkgname=font-misc-ethiopic
pkgver=1.0.5
pkgrel=0
pkgdesc="X.org misc ethiopic fonts"
url="https://xorg.freedesktop.org/"
arch="noarch"
license="MIT"
options="!check"
depends="encodings font-alias mkfontscale fontconfig"
makedepends="font-util-dev bdftopcf"
