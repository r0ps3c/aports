# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: Christian Kampka <christian@kampka.net>
pkgname=s6-linux-utils
pkgver=2.6.1.0
pkgrel=0
pkgdesc="A set of tiny Linux-specific utilities optimized for simplicity and small size."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
options="!check"
makedepends="skalibs-dev>=2.13 linux-headers"
subpackages="$pkgname-doc"
source="https://skarnet.org/software/s6-linux-utils/s6-linux-utils-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		--enable-multicall
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="
a9308cf6629439356c7379d7e07e79cd2fa780014f65fa997551b89fe8a7a9490145efea8612490ece4bdaf3b0ae06e07464ec157a1ed1509d4afee2d5722ec1  s6-linux-utils-2.6.1.0.tar.gz
"
