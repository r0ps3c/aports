pkgname=unbound
pkgver=1.20.0
pkgrel=0
pkgdesc="Unbound is a validating, recursive, and caching DNS resolver"
url="https://nlnetlabs.nl/projects/unbound/about/"
arch="all"
license="BSD-3-Clause"
depends="dnssec-root"
depends_dev="expat-dev"
_depends_migrate="
	/bin/sh
	apk-tools
	openrc
	"
makedepends="$depends_dev
	libevent-dev
	linux-headers
	openssl-dev>3
	protobuf-c-dev
	python3-dev
	swig
	"
checkdepends="
	bind-tools
	ldns-tools
	"
install="$pkgname.pre-install"
pkgusers="unbound"
pkggroups="unbound"
subpackages="
	$pkgname-dbg
	$pkgname-dev
	$pkgname-doc
	$pkgname-libs
	$pkgname-openrc
	py-unbound:py
	$pkgname-migrate::noarch
	"
source="https://unbound.net/downloads/unbound-$pkgver.tar.gz
	conf.patch
	migrate-dnscache-to-unbound
	$pkgname.initd
	$pkgname.confd
	"

# secfixes:
#   1.20.0-r0:
#     - CVE-2024-33655
#   1.19.2-r0:
