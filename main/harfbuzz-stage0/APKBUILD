# Contributor: SÃ¶ren Tempel <soeren+alpinelinux@soeren-tempel.net>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz-stage0
pkgver=6.0.0
pkgrel=1
pkgdesc="Text shaping library (freetype bootstrapping only)"
url="https://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
makedepends="
	meson
	"
checkdepends="python3"
subpackages="$pkgname-dev"
source="https://github.com/harfbuzz/harfbuzz/releases/download/$pkgver/harfbuzz-$pkgver.tar.xz
	lower-soversion.patch
	"
builddir="$srcdir/harfbuzz-$pkgver"
options="!check" # don't check the bootstrap version

provides="harfbuzz-bootstrap"
provider_priority=0

# secfixes:
#   4.4.1-r0:
#     - CVE-2022-33068

build() {
	abuild-meson \
		-Dglib=disabled \
		-Dgobject=disabled \
		-Dgraphite=disabled \
		-Dicu=disabled \
		-Dfreetype=disabled \
		-Dcairo=disabled \
		-Ddocs=disabled \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

dev() {
	default_dev
	provides="harfbuzz-bootstrap-dev"
	provider_priority=0
}

sha512sums="
66f8484586b1b334479d739df1d1107172715ce1d2a3c0105375174fa3e201fd69ceb1543c10d6db49b012912e823befc701f00621f7b5f68036eced80d36f65  harfbuzz-6.0.0.tar.xz
cddc754e7c029fcdb406b21de71ea23cb9d0214e14d404b2d1e31487ba177d98f8069d3823f052b42d69e7ba6ae0e9bd8aebf71e8149fe703fae3e5d37341b23  lower-soversion.patch
"
