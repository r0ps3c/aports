From 9acaa5a848963a41999cfe6b913f5baa1f6c7450 Mon Sep 17 00:00:00 2001
From: Natanael Copa <ncopa@alpinelinux.org>
Date: Mon, 8 May 2023 22:51:36 +0200
Subject: [PATCH] init: use alpine cloud provider instead of nocloud

---
 initramfs-init.in | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/initramfs-init.in b/initramfs-init.in
index ccef0fe..8d75fb1 100755
--- a/initramfs-init.in
+++ b/initramfs-init.in
@@ -691,7 +691,7 @@ if [ -f "$sysroot/etc/.default_boot_services" -o ! -f "$ovl" ]; then
 	fi
 
 	if findfs LABEL=cidata >/dev/null 2>&1 || findfs LABEL=CIDATA >/dev/null 2>&1; then
-		pkgs="$pkgs tiny-cloud-nocloud ifupdown-ng"
+		pkgs="$pkgs tiny-cloud-alpine ifupdown-ng"
 		rc_add tiny-cloud-early boot
 		rc_add tiny-cloud default
 		rc_add tiny-cloud-final default
