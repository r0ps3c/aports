# Contributor: Johannes Matheis <jomat+alpinebuild@jmt.gr>
# Maintainer: Johannes Matheis <jomat+alpinebuild@jmt.gr>
pkgname=jq
pkgver=1.6
pkgrel=4
pkgdesc="A lightweight and flexible command-line JSON processor"
url="https://stedolan.github.io/jq/"
arch="all"
license="MIT"
makedepends="oniguruma-dev"
subpackages="$pkgname-doc $pkgname-dev"
source="jq-download-$pkgver.tar.gz::https://github.com/jqlang/jq/releases/download/jq-$pkgver/jq-$pkgver.tar.gz"

# secfixes:
#   1.6_rc1-r0:
#     - CVE-2016-4074

case "$CARCH" in
riscv64)
	options="$options textrels"
	;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-docs
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" prefix=/usr install
}

sha512sums="
5da71f53c325257f1f546a2520fe47828b495c953270df25ea0e37741463fdda72f0ba4d5b05b25114ec30f27a559344c2b024bacabf610759f4e3e9efadb480  jq-download-1.6.tar.gz
"
