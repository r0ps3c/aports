# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=doxygen
pkgver=1.13.1
pkgrel=0
pkgdesc="Documentation system for C++, C, Java, IDL and PHP"
url="https://www.doxygen.nl/"
arch="all"
license="GPL-2.0-or-later"
checkdepends="libxml2-utils"
makedepends="flex bison coreutils perl python3 cmake samurai"
subpackages="$pkgname-doc"
source="https://doxygen.nl/files/doxygen-$pkgver.src.tar.gz"

build() {
	cmake -B build -G Ninja \
		-DGIT_EXECUTABLE=/bin/false \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-Dbuild_xmlparser=ON
	cmake --build build
}

check() {
	# Remove test that use bibtex
	rm -f ./testing/012_cite.dox
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
67b5d080d5f63bec4c6c2cb32ea5b9548d87dca8fb3b5ffdba3387ad092358be2d4d66e9d85da2864167f26882142149f845d32a6a9c44266967ccff9502ba3a  doxygen-1.13.1.src.tar.gz
"
