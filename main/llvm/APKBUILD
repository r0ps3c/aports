pkgver=20
_majorver=${pkgver%%.*}
pkgname=llvm
pkgrel=0
pkgdesc="Low Level Virtual Machine compiler system, default version."
arch="noarch"
url="https://llvm.org/"
license="Apache-2.0"
depends="llvm$_majorver"
subpackages="
	$pkgname-gtest:_gtest
	$pkgname-static
	$pkgname-libs
	$pkgname-linker-tools:linktools
	$pkgname-dev
	$pkgname-test-utils:_test_utils
	"
	# Deliberately ommitted: $pkgname-test-utils-pyc
options="!check"

_binaries="
	UnicodeNameMappingGenerator
	bugpoint
	dsymutil
	llc
	lli
	lli-child-target
	llvm-PerfectShuffle
	llvm-addr2line
	llvm-ar
	llvm-as
	llvm-bcanalyzer
	llvm-bitcode-strip
	llvm-c-test
	llvm-cat
	llvm-cfi-verify
	llvm-cgdata
	llvm-cov
	llvm-ctxprof-util
	llvm-cvtres
	llvm-cxxdump
	llvm-cxxfilt
	llvm-cxxmap
	llvm-debuginfo-analyzer
	llvm-debuginfod
	llvm-debuginfod-find
	llvm-diff
	llvm-dis
	llvm-dlltool
	llvm-dwarfdump
	llvm-dwarfutil
	llvm-dwp
	llvm-exegesis
	llvm-extract
	llvm-gsymutil
	llvm-ifs
	llvm-install-name-tool
	llvm-jitlink
	llvm-jitlink-executor
	llvm-lib
	llvm-libtool-darwin
	llvm-link
	llvm-lipo
	llvm-lto
	llvm-lto2
	llvm-mc
	llvm-mca
	llvm-ml
	llvm-modextract
	llvm-mt
	llvm-nm
	llvm-objcopy
	llvm-objdump
	llvm-opt-report
	llvm-otool
	llvm-pdbutil
	llvm-profdata
	llvm-profgen
	llvm-ranlib
	llvm-rc
	llvm-readelf
	llvm-readobj
	llvm-readtapi
	llvm-reduce
	llvm-remarkutil
	llvm-rtdyld
	llvm-sim
	llvm-size
	llvm-split
	llvm-stress
	llvm-strings
	llvm-strip
	llvm-symbolizer
	llvm-tblgen
	llvm-tli-checker
	llvm-undname
	llvm-windres
	llvm-xray
	opt
	reduce-chunk-list
	sancov
	sanstats
	split-file
	verify-uselistorder
	yaml-bench
"

package() {
	depends="$pkgname-linker-tools=$pkgver-r$pkgrel"

	# Symlink files from /usr/lib/llvm*/bin to /usr/bin.
	mkdir -p "$pkgdir"/usr/bin
	local name path
	for path in $_binaries; do
		echo "handling: $path"
		name=${path##*/}
		ln -sv ../lib/llvm$_majorver/bin/$name "$pkgdir"/usr/bin/$name
	done
}

_gtest() {
	pkgdesc="LLVM default gtest static libraries"
	depends="llvm$_majorver-gtest"
	mkdir "$subpkgdir"
}

static() {
	pkgdesc="LLVM $_majorver static libraries"
	depends="llvm$_majorver-static"
	mkdir "$subpkgdir"
}

libs() {
	pkgdesc="LLVM $_majorver runtime library"
	depends="llvm$_majorver-libs"
	mkdir "$subpkgdir"
}

linktools() {
	pkgdesc="$pkgdesc (linker plugins)"
	depends="llvm$_majorver-linker-tools"

	mkdir -p "$subpkgdir"/usr/lib/bfd-plugins/
	ln -sfv llvm$_majorver/lib/LLVMgold.so "$subpkgdir"/usr/lib/
	ln -sfv llvm$_majorver/lib/libLTO.so "$subpkgdir"/usr/lib/

	# for bfd to work with clang -flto, you need to put the linker plugin in the bfd dir too,
	# not just usr/lib.
	ln -sfv ../llvm$_majorver/lib/LLVMgold.so "$subpkgdir"/usr/lib/bfd-plugins/
}

dev() {
	depends="llvm$_majorver-dev"
	mkdir -p "$subpkgdir"/usr/lib/cmake/llvm
	ln -sf llvm$_majorver "$subpkgdir"/usr/lib/cmake/llvm
	ln -sf llvm$_majorver/lib/LLVMgold.so "$subpkgdir"/usr/lib/
	ln -sf llvm$_majorver/lib/libLTO.so "$subpkgdir"/usr/lib/
}

_test_utils() {
	pkgdesc="LLVM utilities for executing LLVM and Clang style test suites"
	depends="llvm$_majorver-test-utils"

	mkdir -p "$subpkgdir"/usr/bin/
	ln -sv /usr/lib/llvm$_majorver/bin/lit "$subpkgdir"/usr/bin/lit
	ln -sv /usr/bin/count$_majorver "$subpkgdir"/usr/bin/count
	ln -sv /usr/bin/not$_majorver "$subpkgdir"/usr/bin/not
}
