# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_luaver=5.4
pkgname=highlight
pkgver=4.6
pkgrel=0
pkgdesc="Fast and flexible source code highlighter"
url="http://www.andre-simon.de/doku/highlight/highlight.html"
arch="all"
options="!check" # No test suite.
license="GPL-3.0-or-later"
makedepends="lua$_luaver-dev boost-dev"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-fish-completion:fish:noarch
	$pkgname-zsh-completion
	"
source="http://www.andre-simon.de/zip/highlight-$pkgver.tar.bz2"

build() {
	make cli LUA_PKG_NAME=lua5.4
}

package() {
	make DESTDIR="$pkgdir" install
}

fish() {
	depends=""
	pkgdesc="Fish completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel fish"

	amove usr/share/fish/vendor_completions.d
}

sha512sums="
0214f2141ecf2ab350368ff165dc5f58eb3a23b31142b9d1c443a35f8ea72b9e33770c2de185cd2e3645e298ad41ec1fd45db5ebf546da3144e1dc93da32b811  highlight-4.6.tar.bz2
"
