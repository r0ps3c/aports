# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=fcgi
_pkgname=fcgi2
pkgver=2.4.3
pkgrel=0
pkgdesc="FAST CGI(fcgi) is a language independent, high performant extension to CGI"
url="https://github.com/FastCGI-Archives/fcgi2"
arch="all"
license="OML"
options="!check" # no test suite
makedepends="libtool autoconf automake"
subpackages="$pkgname-dev $pkgname++:xx $pkgname-doc"
source="$_pkgname-$pkgver.tar.gz::https://github.com/FastCGI-Archives/fcgi2/archive/$pkgver.tar.gz"

builddir="$srcdir/$_pkgname-$pkgver"

build() {
	export LIBS="-lm"
	./autogen.sh
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-shared
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

xx() {
	pkgdesc="FCGI c++ library"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/*++* "$subpkgdir"/usr/lib/
}

sha512sums="
86ed90849c761016e812b5a14b06e6318243675a96f3f29794a275daf3cd0a6c2e017a8fa08e7ea40e4b3a4bbfaec0d0b4bc0d24fcf59b5a6629bddd2d1e5eff  fcgi2-2.4.3.tar.gz
"
