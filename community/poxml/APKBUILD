# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=poxml
pkgver=23.08.0
pkgrel=0
arch="all !armhf !riscv64"
url="https://www.kde.org/applications/development/"
pkgdesc="Translates DocBook XML files using gettext po files"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="extra-cmake-modules qt5-qtbase-dev kdoctools-dev gettext-dev samurai"
_repo_url="https://invent.kde.org/sdk/poxml.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/poxml-$pkgver.tar.xz"
subpackages="$pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
0bb559f98f557f749428acb531838e709c26f14595d4feee3ef5b8df3e6bb9bbeb3556277399e352bbf954ab15961e2121c56e42b21f85e3ccaf9a8e44d55f50  poxml-23.08.0.tar.xz
"
