# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kwave
pkgver=24.08.0
pkgrel=0
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kwave.sourceforge.net/"
pkgdesc="A sound editor for KDE"
license="GPL-2.0-or-later"
makedepends="
	alsa-lib-dev
	audiofile-dev
	extra-cmake-modules
	fftw-dev
	flac-dev
	karchive5-dev
	kcompletion5-dev
	kconfig5-dev
	kconfigwidgets5-dev
	kcoreaddons5-dev
	kcrash5-dev
	kdbusaddons5-dev
	kdoctools5-dev
	ki18n5-dev
	kiconthemes5-dev
	kio5-dev
	kservice5-dev
	ktextwidgets5-dev
	kwidgetsaddons5-dev
	kxmlgui5-dev
	libsamplerate-dev
	libvorbis-dev
	opus-dev
	pulseaudio-dev
	qt5-qtbase-dev
	qt5-qtmultimedia-dev
	rsvg-convert
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-libs $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/kwave.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/kwave-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DWITH_OSS=OFF \
		-DWITH_MP3=OFF
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure -E "test_Utils"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8200371b5dc03a0d4af78a6c3730c0b59e779898c73c5a955b77d690323ef6605b27d23bd13d3a800119b4d409c0fc4f5eb71f3d5069ee5a29dc0bef4718081f  kwave-24.08.0.tar.xz
"
