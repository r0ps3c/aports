# Contributor: Bradley J Chambers <brad.chambers@gmail.com>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=pdal
pkgver=2.4.3
pkgrel=0
pkgdesc="PDAL is a C++ BSD library for translating and manipulating point cloud data."
url="https://pdal.io/"
arch="all"
license="BSD-2-Clause"
depends="python3 py3-numpy>=1.14.3-r1"
makedepends="
	cmake
	cpd-dev
	curl-dev
	eigen-dev
	fgt-dev
	gdal-dev
	hdf5-dev
	libgeotiff-dev
	libpq-dev
	libxml2-dev
	linux-headers
	openssl-dev>3
	py3-numpy-dev
	python3-dev
	samurai
	sqlite-dev
	zstd-dev
	"
checkdepends="gdal-tools"
subpackages="$pkgname-dev"
source="https://github.com/PDAL/PDAL/releases/download/$pkgver/PDAL-$pkgver-src.tar.gz"
builddir="$srcdir/PDAL-$pkgver-src"

_with_lazperf="OFF"
case "$CARCH" in
	s390x)
		# 95% tests passed, 6 tests failed out of 110
		options="!check"
		;;
esac

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		-DBUILD_PLUGIN_CPD=ON \
		-DBUILD_PLUGIN_ICEBRIDGE=ON \
		-DBUILD_PLUGIN_PGPOINTCLOUD=ON \
		-DBUILD_PGPOINTCLOUD_TESTS=OFF \
		-DWITH_TESTS=ON
	cmake --build build
}

check() {
	cd build

	# skipped tests are broken
	local skipped_tests="pdal_("
	local tests="
		filters_cpd
		filters_crop
		filters_stats
		io_ept_reader
		io_las_reader
		io_las_writer
		io_optech
		"
	case "$CARCH" in
		arm*|s390x|x86) tests="$tests
			utils
			filters_icp
			file_utils
			" ;;
	esac
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)_test"
	msg "$skipped_tests"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
