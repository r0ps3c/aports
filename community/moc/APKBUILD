# Contributor: ScrumpyJack <scrumpyjack@st.ilet.to>
# Maintainer: ScrumpyJack <scrumpyjack@st.ilet.to>
pkgname=moc
pkgver=2.5.2
pkgrel=3
pkgdesc="MOC is a console audio player"
url="http://moc.daper.net/"
arch="all"
license="GPL"
makedepends="
	alsa-lib-dev
	autoconf
	curl-dev
	faad2-dev
	ffmpeg-dev
	file
	jack-dev
	libmad-dev
	libmodplug-dev
	libtool
	ncurses-dev
	speex-dev
	"
subpackages="$pkgname-doc"
source="
	http://ftp.daper.net/pub/soft/moc/stable/moc-$pkgver.tar.bz2
	ffmpeg6.patch
	fix-https.patch
"

prepare() {
	default_prepare
	update_config_sub
	autoconf
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--without-rcc \
		--with-oss \
		--with-alsa \
		--with-jack \
		--with-aac \
		--with-mp3 \
		--with-musepack \
		--with-vorbis \
		--with-flac \
		--with-wavpack \
		--with-sndfile \
		--with-modplug \
		--with-ffmpeg \
		--with-speex \
		--with-samplerate \
		--with-curl  \
		--disable-cache
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

