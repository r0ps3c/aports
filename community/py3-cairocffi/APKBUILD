# Contributor: Stefan Wagner <stw@bit-strickerei.de>
# Maintainer:
pkgname=py3-cairocffi
_pkgname=cairocffi
pkgver=1.6.0
pkgrel=0
pkgdesc="Python CFFI-based binding to Cairo and GDK-PixBuf"
url="https://github.com/Kozea/cairocffi"
arch="noarch"
license="BSD-3-Clause"
depends="python3 py3-cffi cairo gdk-pixbuf py3-xcffib"
makedepends="py3-gpep517 py3-flit-core py3-wheel py3-installer"
checkdepends="
	font-dejavu
	py3-pytest
	py3-pytest-cov
	py3-pytest-flake8
	py3-pytest-isort
"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
options="!check" # tests broken

replaces="py-cairocffi" # For backwards compatibiltiy
provides="py-cairocffi=$pkgver-r$pkgrel" # For backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/cairocffi*.whl
}

sha512sums="
d46602231f443d8a0b3d46a7e63bb9c8daaee6c24e1c65b071c8b6d22cb96abec7e6c08d38c072f54d223e247e80cef4a562590818e01c8f0b5357bd9c2f29d9  cairocffi-1.6.0.tar.gz
"
