pkgname=ksmbd-tools
pkgver=3.5.1
pkgrel=0
pkgdesc="userspace tools for kernel smb server (ksmbd)"
url="https://github.com/cifsd-team/ksmbd-tools"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc"
makedepends="autoconf automake libtool libnl3-dev glib-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/cifsd-team/ksmbd-tools/archive/refs/tags/$pkgver.tar.gz"

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
817824e434a840245300a1db16e01ead180ff6b5157589fec03a72f7a342d1646268a6316ba4cb5fd99b84a45927c8f34fdf7480ab6ee8f07727492e97067904  ksmbd-tools-3.5.1.tar.gz
"
