pkgname=dino
pkgver=0.3.2
pkgrel=0
pkgdesc="Modern Jabber/XMPP client"
url="https://dino.im"
# missing libhandy1 or webrtc-audio-processing
arch="all !s390x !armhf !armv7 !ppc64le !riscv64"
license="GPL-3.0-only"
depends="gst-plugins-good gst-plugins-good-gtk"
makedepends="
	cmake
	glib-dev
	glib-networking
	gpgme-dev
	gspell-dev
	gst-libav
	gst-plugins-base-dev
	gtk+3.0-dev
	libgcrypt-dev
	libgee-dev
	libhandy1-dev
	libnice-dev
	libqrencode-dev
	libsignal-protocol-c-dev
	libsoup3-dev
	libsrtp-dev
	ninja
	sqlite-dev
	vala
	webrtc-audio-processing-dev
	"
subpackages="$pkgname-lang"
source="
	https://github.com/dino/dino/releases/download/v$pkgver/dino-$pkgver.tar.gz
	mobile-ui.patch
	"

# secfixes:
#   0.3.2-r0:
#     - CVE-2023-28686
#   0.2.1-r0:
#     - CVE-2021-33896

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		-DBUILD_TESTS="$(want_check && echo ON || echo OFF)" \
		-DUSE_SOUP3=yes
	cmake --build build
}

check() {
	build/xmpp-vala-test
	build/signal-protocol-vala-test
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
