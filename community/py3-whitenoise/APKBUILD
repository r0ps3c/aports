# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-whitenoise
pkgver=6.8.1
pkgrel=0
pkgdesc="Radically simplified static file serving for Python web apps"
url="https://whitenoise.readthedocs.io/"
arch="noarch"
license="MIT"
depends="py3-brotli"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-django
	py3-pytest
	py3-requests
	"
subpackages="$pkgname-pyc"
source="https://github.com/evansd/whitenoise/archive/$pkgver/py3-whitenoise-$pkgver.tar.gz"
builddir="$srcdir/whitenoise-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
0143e2db33b6e35d0289bb01e3558cd22a26603258500d7854aa82e75a2b8d26757ec7718bfe1d8c14c8e7b27239d4e582ec462ec292043511d28e123963f99a  py3-whitenoise-6.8.1.tar.gz
"
