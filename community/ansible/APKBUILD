pkgname=ansible
pkgver=10.0.1
pkgrel=0
pkgdesc="core components for Ansible"
url="https://ansible.com/"
options="!check" # TODO: enable tests
arch="noarch"
license="GPL-3.0-or-later"
depends="python3 ansible-core>=2.16.0"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/a/ansible/ansible-$pkgver.tar.gz"

# secfixes:
#   2.10.7-r0:
#     - CVE-2021-20191
#   2.10.1-r0:
#     - CVE-2020-25646

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
ff370408584ff2ef5d064247895c6e95f9c20a223d69d69c016d8d5846ceaa9b43b9e581b5d4b2b6571f045f2bc73126ef0d7d2e1e91270fd63c15b4bdb0b4d2  ansible-10.0.1.tar.gz
"
