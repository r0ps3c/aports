# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Contributor: Takuya Noguchi <takninnovationresearch@gmail.com>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=ansible
pkgver=7.4.0
pkgrel=0
pkgdesc="core components for Ansible"
url="https://ansible.com/"
options="!check" # TODO: enable tests
arch="noarch"
license="GPL-3.0-or-later"
depends="python3 ansible-core"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
source="https://pypi.python.org/packages/source/a/ansible/ansible-$pkgver.tar.gz"

# secfixes:
#   2.10.7-r0:
#     - CVE-2021-20191
#   2.10.1-r0:
#     - CVE-2020-25646

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
c77aebb54676b669305905c969fa5afac9e1262bfefa358de7fee0fb3ef89d0306c599acb2225cdb4209c53df16c307d438cc628299aec494c70cba166eb3cbb  ansible-7.4.0.tar.gz
"
