# Contributor: Jeff Pohlmeyer <yetanothergeek@gmail.com>
# Maintainer: Jeff Pohlmeyer <yetanothergeek@gmail.com>
pkgname=jwm
pkgver=2.4.6
pkgrel=0
pkgdesc="A lightweight window manager for the X11 Window System"
options="!check" # No testsuite
url="https://joewing.net/projects/jwm/"
arch="all"
license="MIT"
makedepends="
	libjpeg-turbo-dev
	libpng-dev
	librsvg-dev
	libx11-dev
	libxext-dev
	libxft-dev
	libxinerama-dev
	libxmu-dev
	libxpm-dev
	libxrender-dev
	pango-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
source="https://github.com/joewing/jwm/releases/download/v$pkgver/jwm-$pkgver.tar.xz"

prepare() {
	default_prepare
	update_config_sub
	# not replaced for some reason..
	sed -i "s|@mkdir_p@|mkdir -p|g" \
		po/Makefile.in.in
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-rpath
	make
}

package() {
	make DESTDIR="$pkgdir" install

	install -Dvm644 LICENSE \
		-t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
daf1bf033f2055534bab7ac5a12966df69039d3af2a220d1c9ce2126759019c9e6fea1a50fdf72d30be36d0cd22f243d11010d50f4b0795577b4d74209b82bd6  jwm-2.4.6.tar.xz
"
