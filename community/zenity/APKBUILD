pkgname=zenity
pkgver=3.44.4
pkgrel=0
pkgdesc="Display dialog boxes from the command line and shell scripts"
url="https://wiki.gnome.org/Projects/Zenity"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	gtk+3.0-dev
	intltool
	itstool
	libnotify-dev
	libxml2-utils
	meson
	"
options="!check" # no tests
subpackages="$pkgname-lang $pkgname-doc"
source="https://download.gnome.org/sources/zenity/${pkgver%.*}/zenity-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dlibnotify=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
4677375cc13e0e95f3a24e70475fe771b072eab2eb04b43e1d642a524352b1e1d0f0e84fbf62e15f6b9260ea4c5f8a3d4f2f70deaad2b881a56eedcb5e738d89  zenity-3.44.4.tar.xz
"
