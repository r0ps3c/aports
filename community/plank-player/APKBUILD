# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plank-player
pkgver=5.27.3
pkgrel=0
pkgdesc="Multimedia Player for playing local files on Plasma Bigscreen"
url="https://invent.kde.org/plasma-bigscreen/plank-player"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="GPL-2.0-or-later"
depends="
	kirigami2
	qt5-qtgraphicaleffects
	qt5-qtmultimedia
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami2-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtmultimedia-dev
	qt5-qtquickcontrols2-dev
	samurai
	"
case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
source="https://download.kde.org/$_rel/plasma/$pkgver/plank-player-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a56a1e655fc4ed0fc73bffc7a6099300c24c94eab625d37317d081904816d2ec3bb951e3274592cf61e04aa78b13d75fa7874a81f0c41f331c41eca41100bd7a  plank-player-5.27.3.tar.xz
"
