# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <fossdd@pwned.life>
pkgname=localsearch
pkgver=3.9.0
pkgrel=1
pkgdesc="Data miners for tracker"
url="https://gitlab.gnome.org/GNOME/localsearch"
arch="all"
license="GPL-2.0-or-later"
depends="tinysparql"
makedepends="
	asciidoc
	dbus-dev
	enca-dev
	ffmpeg-dev
	flac-dev
	gexiv2-dev
	giflib-dev
	glib-dev
	gobject-introspection-dev
	gst-plugins-base-dev
	gstreamer-dev
	icu-dev
	libexif-dev
	libgsf-dev
	libgudev-dev
	libiptcdata-dev
	libjpeg-turbo-dev
	libosinfo-dev
	libpng-dev
	libseccomp-dev
	libvorbis-dev
	libxml2-dev
	meson
	networkmanager-dev
	poppler-dev
	taglib-dev
	tiff-dev
	tinysparql-dev
	totem-pl-parser-dev
	upower-dev
	zlib-dev
	"
checkdepends="
	bash
	coreutils
	py3-gobject3
	python3
	"
subpackages="$pkgname-dbg $pkgname-lang $pkgname-doc"
source="https://download.gnome.org/sources/localsearch/${pkgver%.*}/localsearch-$pkgver.tar.xz"
options="!check" # needs to install itself

# for backwards compatibility
replaces="tracker-miners"
provides="tracker-miners=$pkgver-r$pkgrel"

case "$CARCH" in
	s390x) ;; # missing exempi
	*) makedepends="$makedepends exempi-dev" ;;
esac

build() {
	abuild-meson \
		-Db_lto=true \
		-Dfunctional_tests="$(want_check && echo true || echo false)" \
		-Dsystemd_user_services=false \
		-Dlandlock=enabled \
		. output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
693be7a6070ef30e5382e85af346356ee7f07f97d284a6b3cb59c6c4b86d6d2caf5e979f2c9c2a71a332c475d65615d4917b6f148b693c11d26c03f5d81ae3df  localsearch-3.9.0.tar.xz
"
