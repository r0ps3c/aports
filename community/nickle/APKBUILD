# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=nickle
pkgver=2.99
pkgrel=0
pkgdesc="Desk calculator language with C-like syntax"
url="https://nickle.org/"
arch="all"
license="MIT"
makedepends="
	bison
	flex
	gmp-dev
	meson
	readline-dev
	"
checkdepends="
	bc
	coreutils-fmt
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://nickle.org/release/nickle-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output

	sed -e "s,@VERSION@,$pkgver," \
	    -e "s,@RELEASE_DATE@,$(grep RELEASE_DATE= configure.ac | awk -F'"' '{print $2}')," \
	    -e 's,@pkgdatadir@,/usr/share/nickle,' nickle.1.in > nickle.1
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	install -Dvm644 nickle.1 -t "$pkgdir"/usr/share/man/man1/
	install -Dvm644 COPYING -t "$pkgdir"/usr/share/licenses/$pkgname/
}

sha512sums="
7647462f435ad4240826810085466ddb096d057102dfad9a3167a9e4c2a6ff1f06c04e51acf3940b0b337eca598674bab5129e1f9c581169ca8d842f6dad3b7a  nickle-2.99.tar.xz
"
