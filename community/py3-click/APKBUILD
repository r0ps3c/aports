# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py3-click
pkgver=8.1.6
pkgrel=0
pkgdesc="Simple wrapper around optparse for powerful command line utilities"
url="https://click.palletsprojects.com"
arch="noarch"
license="BSD-3-Clause"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/c/click/click-$pkgver.tar.gz"
builddir="$srcdir/click-$pkgver"

replaces="py-click" # Backwards compatibility
provides="py-click=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
02361083663487e60a096a91c38e8dc30287a033618734e1d7c660cb25d6ffec8eb4ecb33d9606edf792971c29cd6315810957cd42efde622649dd912300ec40  click-8.1.6.tar.gz
"
