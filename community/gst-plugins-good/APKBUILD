	libshout-dev
	libsm-dev
	libsoup3-dev
	libvpx-dev
	libxdamage-dev
	libxext-dev
	libxv-dev
	linux-headers
	meson
	mpg123-dev
	nasm
	opencore-amr-dev
	orc-compiler
	orc-dev
	pulseaudio-dev
	taglib-dev
	wavpack-dev
	zlib-dev
	"
case "$CARCH" in 
	armhf)
		;;
	*)
		makedepends="
			$makedepends
			qt5-qtdeclarative-dev
			qt5-qttools-dev
			qt5-qtwayland-dev
			qt5-qtx11extras-dev
			qt6-qtdeclarative-dev
			qt6-qtwayland-dev
			qt6-qttools-dev
			"
		;;
esac

ldpath="/usr/lib/gstreamer-1.0"
source="https://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-$pkgver.tar.xz
	flaky-test.patch
	0001-qtmux-Implement-rotation-tag-support.patch
	"

