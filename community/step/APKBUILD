# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=step
pkgver=23.08.1
pkgrel=1
# armhf blocked by extra-cmake-modules
# s390x blocked by khtml
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !s390x !riscv64"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig5-dev
	kcrash5-dev
	kdoctools5-dev
	khtml-dev
	kiconthemes5-dev
	knewstuff5-dev
	kplotting5-dev
	qt5-qtbase-dev
	qt5-qtsvg-dev
	qt5-qttools-dev
	samurai
	shared-mime-info
	"
_repo_url="https://invent.kde.org/education/step.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/step-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7449f1f77af9522e4a3b644a2edddd903e1034e4378b95a0dce5542490dceebe7c56a5a5c3bdd7b3fe6887307b2a9be1b5a092bedd3f90bddb7ab9742441e2d2  step-23.08.1.tar.xz
"
