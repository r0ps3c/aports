# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=fractal
pkgver=4.4.0
pkgrel=4
pkgdesc="Matrix group messaging app"
url="https://wiki.gnome.org/Apps/Fractal"
arch="x86_64 x86 armhf armv7 aarch64 ppc64le" # limited by Rust
license="GPL-3.0-or-later"
depends="
	dbus:org.freedesktop.Secrets
	gst-plugins-good-gtk
	xdg-utils
	"
makedepends="
	cargo
	dbus-dev
	glib-dev
	gmp-dev
	gst-editing-services-dev
	gst-plugins-bad-dev
	gst-plugins-base-dev
	gstreamer-dev
	gtk+3.0-dev
	gtksourceview4-dev
	libhandy-dev
	meson
	openssl-dev>3 gspell-dev
	"
options="!check" # no tests
subpackages="$pkgname-lang"
source="$pkgname-$pkgver-2.tar.gz::https://gitlab.gnome.org/GNOME/fractal/-/archive/$pkgver/fractal-$pkgver.tar.gz
	meson-0.60.patch
	openssl3.patch
	socket2.patch
	"

case "$CARCH" in
	x86)
		export CFLAGS="$CFLAGS -fno-stack-protector"
		;;
esac

export CARGO_REGISTRIES_CRATES_IO_PROTOCOL="sparse"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

