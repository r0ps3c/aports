# Contributor: Francesco Camuffo <dev@fmac.xyz>
# Maintainer: Francesco Camuffo <dev@fmac.xyz>
pkgname=ugrep
pkgver=3.11.1
pkgrel=0
pkgdesc="Ultra fast grep with interactive query UI and fuzzy search"
url="https://github.com/Genivia/ugrep/wiki"
arch="all"
license="BSD-3-Clause"
checkdepends="bash"
makedepends="bzip2-dev lz4-dev pcre2-dev xz-dev zlib-dev zstd-dev"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Genivia/ugrep/archive/refs/tags/v$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
be759845a26be143072534080ecce8c0f0e48408c57b1df3499b8b4fc6ee59df62197ff2bb19f126e794f6bde9eb8ee168cc7eb3b4285dbe754e0ab3e7c867a0  ugrep-3.11.1.tar.gz
"
