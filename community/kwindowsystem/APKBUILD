# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kwindowsystem
pkgver=6.9.0
pkgrel=0
pkgdesc="Access to the windowing system"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="MIT AND (LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	libxrender-dev
	plasma-wayland-protocols
	qt6-qtdeclarative-dev
	qt6-qtwayland-dev
	xcb-util-keysyms-dev
	xcb-util-wm-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/frameworks/kwindowsystem.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/kwindowsystem-$pkgver.tar.xz"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	local skipped_tests="kwindowsystem-(kwindowsystem_threadtest"
	local tests="
		kwindowsystemx11test
		kwindowinfox11test
		compositingenabled_test
		netrootinfotestwm
		"
	case "$CARCH" in
		s390x)
			tests="$tests
				kwindoweffectstest
				netwininfotestwm
				"
			;;
	esac
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)"
	echo $skipped_tests
	xvfb-run ctest --test-dir build -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
6d9f468c67f6703c2d488cdab07e54dcab58748ce8ad05a2e9681218a568ab3f2b700a3a12ccae60a042c1adae15be7bf220e556fc99d636daa0982c7a832f91  kwindowsystem-6.9.0.tar.xz
"
