pkgname=inxi
pkgver=3.3.24
_pkgver="$pkgver"-1
pkgrel=0
pkgdesc="Fully featured CLI system information tool"
options="!check" # no upstream tests
url="https://github.com/smxi/inxi"
arch="noarch"
license="GPL-3.0-or-later"
depends="perl"
subpackages="$pkgname-doc"
source="https://github.com/smxi/inxi/archive/$_pkgver/inxi-$_pkgver.tar.gz"
builddir="$srcdir/inxi-$_pkgver"

package() {
	install -Dm0755 inxi -t "$pkgdir"/usr/bin
	install -Dm0644 inxi.1 -t "$pkgdir"/usr/share/man/man1
}

sha512sums="
d404447f120c507bdc2f8d6f391a42a4400dd9417da10ed15bb80d568f4c411cf2dd2e3b65ee826b6b7fd8d06c01ca25874846a7fc08355ebe19552ed723d2fe  inxi-3.3.24-1.tar.gz
"
