#     - CVE-2020-26891
#   1.20.0-r0:
#     - CVE-2020-26890

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --system-site-packages test-env
	test-env/bin/python3 -m installer dist/*.whl
	# workaround wrong import dir, because python -m .. adds cwd to pythonpath
	mv synapse synapse-x || true
	test-env/bin/python3 -m twisted.trial -j$(nproc) tests
	mv synapse-x synapse || true
}

package() {
	python3 -m installer -d "$pkgdir" dist/*.whl

	install -d -g synapse -o synapse -m775 \
		"$pkgdir"/etc/synapse \
		"$pkgdir"/var/lib/synapse

	cp -a synapse/res "$pkgdir"/var/lib/synapse
	chown -R synapse:synapse "$pkgdir"/var/lib/synapse/res

	install -Dm755 "$srcdir"/synapse.initd "$pkgdir"/etc/init.d/synapse
	install -Dm644 "$srcdir"/synapse.confd "$pkgdir"/etc/conf.d/synapse
}

