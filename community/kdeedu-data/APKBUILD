# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdeedu-data
pkgver=24.08.0
pkgrel=0
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
url="https://kde.org/applications/education"
pkgdesc="Common data for KDE Edu applications"
license="GPL-2.0-only"
makedepends="
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/education/kdeedu-data.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/kdeedu-data-$pkgver.tar.xz"
# No code to test
options="!check"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
dddd0acae527081d2dcd8b7ae297ffa4de9737cddb20d673d0a49c458a4c96aabdd163ea1047b778a12dd3396890caebabcc2ebef85619acffa466c050930616  kdeedu-data-24.08.0.tar.xz
"
