# Contributor: Bart Ribbers <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <bribbers@disroot.org>"
pkgname=plasma5support
pkgver=6.2.2
pkgrel=0
pkgdesc="Support components for porting from KF5/Qt5 to KF6/Qt6"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kio-dev
	kpackage-dev
	kservice-dev
	kxmlgui-dev
	libksysguard-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/plasma/plasma5support.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/plasma5support-$pkgver.tar.xz"
options="!check" # Tests fail, needs looking into

replaces="plasma-workspace<=6.1.5-r1"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=ON \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

lang() {
	replaces="plasma-workspace-lang<=6.1.5-r1"

	default_lang
}
sha512sums="
61e51ba9866912a1030372751e4d20e1859da410d5de2ebd9acf02e1d70a3212cd23ba6f299c8bc621dff8646f69acd9b5aee233480b8fc60c58f3fcefbb42c5  plasma5support-6.2.2.tar.xz
"
