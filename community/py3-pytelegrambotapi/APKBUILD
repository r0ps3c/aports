pkgname=py3-pytelegrambotapi
pkgver=4.15.3
_gittag=9d37128bcd0f5d8bbd2288db28b5f8b3a212eb02
pkgrel=0
arch="noarch"
pkgdesc="A simple, but extensible Python implementation for the Telegram Bot API."
url="https://pypi.org/project/pyTelegramBotAPI/"
license="GPL-2.0-only"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
source="$pkgname-$_gittag.tar.gz::https://github.com/eternnoir/pyTelegramBotAPI/archive/$_gittag.tar.gz"
builddir="$srcdir"/pyTelegramBotAPI-$_gittag
options="!check" # No testsuite
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
bd427e1fe26ce8f54e0a7a9f87a4e7fd1697bd094fa3715f47a0ddedadc8117f3cc90e7b6d5ec20cb2a3c4ac500a98e146a91b0db51385e6be5b948efa1f0868  py3-pytelegrambotapi-9d37128bcd0f5d8bbd2288db28b5f8b3a212eb02.tar.gz
"
