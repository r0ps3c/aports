# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>
pkgname=mauikit-imagetools
pkgver=3.0.0
pkgrel=1
pkgdesc="MauiKit Image Tools Components"
# armhf blocked by extra-cmake-modules
# s390x, armhf, x86, ppc64le blocked by tesseract-ocr
arch="all !armhf !s390x !x86 !ppc64le"
url="https://mauikit.org/"
license="GPL-2.0-or-later"
depends="
	kirigami2
	kquickimageeditor
	"
depends_dev="
	exiv2-dev
	kcoreaddons5-dev
	ki18n5-dev
	kquickimageeditor-dev
	mauikit-dev
	tesseract-ocr-dev
	opencv-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtlocation-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
source="https://download.kde.org/stable/maui/mauikit-imagetools/$pkgver/mauikit-imagetools-$pkgver.tar.xz
	exiv2-0.28.patch
	"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
