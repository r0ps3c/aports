# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=diffoscope
pkgver=234
pkgrel=0
pkgdesc="In-depth comparison of files, archives, and directories"
url="https://diffoscope.org/"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	py3-libarchive-c
	py3-magic
	python3
	"
makedepends="
	py3-docutils
	py3-setuptools
	python3-dev
	"
checkdepends="
	bzip2
	cdrkit
	gzip
	libarchive-tools
	openssh-client-default
	py3-html2text
	py3-pytest
	unzip
	"
source="https://salsa.debian.org/reproducible-builds/diffoscope/-/archive/$pkgver/diffoscope-$pkgver.tar.gz"

build() {
	python3 setup.py build
}

check() {
	# html test fails
	PYTHONPATH="$PWD" \
	PYTHONDONTWRITEBYTECODE=1 \
	pytest -v -k 'not test_diff'
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

sha512sums="
e97205ef45d68df06329cc1ac568948e4d581d3b49b4a521e205938b4626526e62c2628eeb43d2ab4b3b9b4a60d87c50c480c2259cb669367f5c644094bce3ca  diffoscope-234.tar.gz
"
