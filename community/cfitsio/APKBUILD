# Contributor: Holger Jaekel <holger.jaekel@gmx.de>
maintainer="Holger Jaekel <holger.jaekel@gmx.de>"
pkgname=cfitsio
pkgver=4.5.0
pkgrel=0
pkgdesc="Library reading and writing data files in Flexible Image Transport System data format"
url="https://heasarc.gsfc.nasa.gov/fitsio/"
arch="all"
license="CFITSIO"
makedepends="
	bzip2-dev
	cmake
	curl-dev
	gfortran
	samurai
	"
subpackages="
	$pkgname-dev
	"
source="https://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-$pkgver.tar.gz
	10-OFF_T.patch
	20-add-loongarch64.patch
	30-lib_destination.patch
	"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DUSE_PTHREADS=ON \
		-DUSE_BZIP2=ON \
		-DTESTS=ON \
		-DUTILS=ON
		$crossopts
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

check() {
	cd build
	ctest
}

