# Contributor: psykose <alice@ayaya.dev>
# Maintainer: psykose <alice@ayaya.dev>
pkgname=mold
pkgver=1.10.0
pkgrel=0
pkgdesc="fast modern linker"
url="https://github.com/rui314/mold"
arch="all"
license="AGPL-3.0" # not specified if -only
makedepends="
	clang
	cmake
	libtbb-dev
	linux-headers
	llvm-dev
	mimalloc2-dev
	openssl-dev
	samurai
	zlib-dev
	zstd-dev
	"
checkdepends="
	bash
	dwarf-tools
	grep
	perl
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rui314/mold/archive/refs/tags/v$pkgver.tar.gz"

case "$CARCH" in
riscv64)
	options="$options textrels"
	;;
esac

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DMOLD_LTO=ON \
		-DMOLD_USE_SYSTEM_MIMALLOC=ON \
		-DMOLD_USE_SYSTEM_TBB=ON \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)"

	cmake --build build
}

check() {
	ctest --output-on-failure --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3a275dd439383c6e868e754f64d2d4ba7fdd0e669a49e5041e2f75f30f662fd4cd6e8cca0cdd558ac5fdd43cc7d3b14ca02535eebb010cfed4c018f1eb5c84b7  mold-1.10.0.tar.gz
"
