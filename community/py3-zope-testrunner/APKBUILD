# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=py3-zope-testrunner
_pkgname=zope.testrunner
pkgver=6.3.1
pkgrel=0
pkgdesc="Zope testrunner script"
options="!check" # Fails to run
url="https://github.com/zopefoundation/zope.testrunner"
arch="noarch"
license="ZPL-2.1"
depends="python3 py3-setuptools py3-zope-exceptions py3-zope-interface"
makedepends="py3-gpep517 py3-wheel"
checkdepends="py3-zope-testing"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

prepare() {
	default_prepare

	#Remove ancient python2.5 reference
	rm -rf $builddir/src/zope/testrunner/tests/testrunner-ex-251759
}

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
aa1701e014e50c7529e072f288274aa280719099e582b2b1efeae272b443dbe0f2b737af0e02c45e3adb2da039ef84f82224e5b158932af63c5998787c15b6c1  zope.testrunner-6.3.1.tar.gz
"
