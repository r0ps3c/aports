pkgname=pdpmake
pkgver=1.4.3
pkgrel=0
pkgdesc="An implementation of POSIX make"
url="https://frippery.org/make/"
arch="all"
license="Public Domain"
makedepends="$depends_dev"
source="https://frippery.org/make/pdpmake-$pkgver.tgz"

build() {
	make PREFIX=/usr
}

check() {
	MAKEFLAGS="" make test
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" install
}

