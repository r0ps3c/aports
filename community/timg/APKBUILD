# Contributor: Milan P. StaniÄ‡ <mps@arvanta.net>
# Maintainer: mio <miyopan@e.email>
pkgname=timg
pkgver=1.5.1
pkgrel=0
pkgdesc="24-Bit color image viewer for terminal"
url="https://github.com/hzeller/timg"
arch="all"
options="!check" # package doesn't have test
license="GPL-2.0-only"
makedepends="
	cmake
	ffmpeg-dev
	freetype-dev
	graphicsmagick-dev
	libdeflate-dev
	libexif-dev
	libjpeg-turbo-dev
	libsixel-dev
	libwebp-dev
	samurai
	xz-dev
	zlib-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/hzeller/timg/archive/v$pkgver.tar.gz
	missing-include.patch
	"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DTIMG_VERSION_FROM_GIT=OFF \
		-DDISTRIBUTION_VERSION="$pkgver"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
79a09bfb3c0109da1ec8f05b6b3dffd8e450c2c49012078857e5754ceb87b97b93b51a9a1df18ffa3df729672ef75e9a385934c57f7bc7cdb31bf38bf71c1311  timg-1.5.1.tar.gz
cd06fc2ad42e126d266664304d22eb6515ec24fb7fe1c25b13f7351c5215c5a9c2e855f378ceb03bced15f410b2726ed6faea200215d06e274ba705b5fd7fc8d  missing-include.patch
"
