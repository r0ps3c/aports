# Maintainer: psykose <alice@ayaya.dev>
pkgname=py3-pyproject-metadata
pkgver=0.7.0
pkgrel=0
pkgdesc="PEP 621 metadata parsing"
url="https://github.com/FFY00/python-pyproject-metadata"
arch="noarch"
license="MIT"
depends="python3 py3-packaging"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
source="$pkgname-$pkgver.tar.gz::https://github.com/FFY00/python-pyproject-metadata/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/python-pyproject-metadata-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
aef8a340cc2b581b6bae763c1e7d6a800c7a1b6c9cf08b722e21b8e0a23fb753ec602db21710935aa9245f3044ea3b6a8e8dc52eea88f608d2eab0ae29871c79  py3-pyproject-metadata-0.7.0.tar.gz
"
