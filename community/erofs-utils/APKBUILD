pkgname=erofs-utils
pkgver=1.8
pkgrel=0
pkgdesc="userspace utilities for erofs filesystem"
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	libtool
	lz4-dev
	util-linux-dev
	zlib-dev
	"

subpackages="$pkgname-doc"
source="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git/snapshot/erofs-utils-$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -fiv
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
89986b553765dae602531e6bb1a26780c27a74a9685dddd170f5738804357475d72e2398e1970694599cca0849949e0251690456a8dbcc9997d1fe260d8685aa  erofs-utils-1.8.tar.gz
"
