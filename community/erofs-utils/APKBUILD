pkgname=erofs-utils
pkgver=1.8.2
pkgrel=0
pkgdesc="userspace utilities for erofs filesystem"
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	libtool
	lz4-dev
	util-linux-dev
	zlib-dev
	"

subpackages="$pkgname-doc"
source="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git/snapshot/erofs-utils-$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -fiv
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
474ea30662e498e6ece5d4e5171c333ec040eaffa4f5670d1b728b1461a2a18fa90ea6cc2ad7b26e87732d735985e9108a9c49a7072b4dc4fdfee7916df48593  erofs-utils-1.8.2.tar.gz
"
