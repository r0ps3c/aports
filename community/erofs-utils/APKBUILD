pkgname=erofs-utils
pkgver=1.8.5
pkgrel=0
pkgdesc="userspace utilities for erofs filesystem"
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	libtool
	lz4-dev
	util-linux-dev
	zlib-dev
	"

subpackages="$pkgname-doc"
source="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git/snapshot/erofs-utils-$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -fiv
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
c5c3a71494113ad69c5b9278ef682250b3a5eca7e6f6e92a68800f7c7ba7e69f1dbf65f877c856c619dc2276f9d3b1c82fc89853ae7938a63b390c0cb246a0da  erofs-utils-1.8.5.tar.gz
"
