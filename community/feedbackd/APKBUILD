# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/phosh <newbyte@postmarketos.org>
pkgname=feedbackd
pkgver=0.6.0
pkgrel=0
pkgdesc="Daemon to provide haptic, LED, and audio feedback triggered by application events"
url="https://source.puri.sm/Librem5/feedbackd"
arch="all"
license="GPL-3.0-or-later"
depends="dbus feedbackd-device-themes"
makedepends="
	gi-docgen
	glib-dev
	gmobile-dev
	gobject-introspection-dev
	gsound-dev
	gtk-doc
	json-glib-dev
	libgudev-dev
	meson
	vala
	umockdev-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://sources.phosh.mobi/releases/feedbackd/feedbackd-$pkgver.tar.xz"
install="$pkgname.pre-install $pkgname.pre-upgrade"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=true \
		-Dudev=true \
		. output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
6a455b807df68df7769d27fa9056ab714fcb9b0771d4b53074412a2afd7721196c6ee6c0986edaffd39914c1a0b7f6cf37ec4cae3f426f6e5d0692417e6a3088  feedbackd-0.6.0.tar.xz
"
