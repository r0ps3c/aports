# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=tuba
pkgver=0.4.0
pkgrel=0
pkgdesc="Browse the Fediverse"
url="https://tuba.geopjr.dev/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	desktop-file-utils
	glib-dev
	gtk4.0-dev
	gtksourceview5-dev
	json-glib-dev
	libadwaita-dev
	libgee-dev
	libsecret-dev
	libsoup3-dev
	libxml2-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
options="!check"
source="tuba-v$pkgver.tar.gz::https://github.com/GeopJr/Tuba/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Tuba-$pkgver"

build() {
	abuild-meson -Db_lto=true . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	ln -s dev.geopjr.Tuba "$pkgdir"/usr/bin/tuba
}

sha512sums="
d3612d988605d3c2d20249a091e0b2580aaf6a7c289646f23c6aac9552b9466d8a32621498d8c8f77509bd932326304f4f9657d1a2c7d3ed538cc7e40efa96ce  tuba-v0.4.0.tar.gz
"
