# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=tuba
pkgver=0.3.0
pkgrel=0
pkgdesc="Browse the Fediverse"
url="https://tuba.geopjr.dev/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	desktop-file-utils
	glib-dev
	gtk4.0-dev
	gtksourceview5-dev
	json-glib-dev
	libadwaita-dev
	libgee-dev
	libsecret-dev
	libsoup3-dev
	libxml2-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
options="!check"
source="tuba-v$pkgver.tar.gz::https://github.com/GeopJr/Tuba/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Tuba-$pkgver"

build() {
	abuild-meson -Db_lto=true . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	ln -s dev.geopjr.Tuba "$pkgdir"/usr/bin/tuba
}

sha512sums="
07b173af270f96adcaa0852c0308bd105113673a97e3893ae82ad76f8e149f8309d719d02015e2ed6960ee1e78f8fc2556e765f06eba0aff595086cfa057bb34  tuba-v0.3.0.tar.gz
"
