# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=tuba
pkgver=0.4.1
pkgrel=0
pkgdesc="Browse the Fediverse"
url="https://tuba.geopjr.dev/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	desktop-file-utils
	glib-dev
	gtk4.0-dev
	gtksourceview5-dev
	json-glib-dev
	libadwaita-dev
	libgee-dev
	libsecret-dev
	libsoup3-dev
	libxml2-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
options="!check"
source="tuba-v$pkgver.tar.gz::https://github.com/GeopJr/Tuba/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Tuba-$pkgver"

build() {
	abuild-meson -Db_lto=true . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	ln -s dev.geopjr.Tuba "$pkgdir"/usr/bin/tuba
}

sha512sums="
7804e06a29d18e1fdf88aa4e8237a8fd8c8eccaa668ec9b2057a84a9f17c855b2c378c3ffe354e157fdeb8c392128ddaf6faf92687b67319d7cc3371e4d885ab  tuba-v0.4.1.tar.gz
"
