# Contributor: Danct12 <danct12@disroot.org>
# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Contributor: Mike Banon <mikebdp2@gmail.com>
# Contributor: Clayton Craft <clayton@craftyguy.net>
maintainer="fossdd <fossdd@pwned.life>"
pkgname=chatty
pkgver=0.8.7
pkgrel=0
pkgdesc="XMPP and SMS messaging via libpurple and Modemmanager"
arch="all"
url="https://gitlab.gnome.org/World/Chatty"
license="GPL-3.0-or-later"
depends="
	cyrus-sasl
	purple-xmpp
	mmsd-tng
	purple-carbons
	purple-lurch
	purple-xmpp-http-upload
	"
makedepends="
	evolution-data-server-dev
	evolution-dev
	feedbackd-dev
	folks-dev
	gspell-dev
	gstreamer-dev
	gtk4.0-dev
	gtksourceview5-dev
	libadwaita-dev
	libcmatrix-dev
	libgee-dev
	libphonenumber-dev
	meson
	modemmanager-dev
	olm-dev
	pidgin-dev
	"
checkdepends="appstream-glib desktop-file-utils"
source="https://gitlab.gnome.org/World/Chatty/-/archive/v$pkgver/Chatty-v$pkgver.tar.gz"

subpackages="$pkgname-lang $pkgname-bash-completion $pkgname-dbg"
options="!check" # Requires running Wayland compositor
builddir="$srcdir/Chatty-v$pkgver"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
