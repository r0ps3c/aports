# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kasts
pkgver=22.09.2
pkgrel=1
pkgdesc="Kirigami-based podcast player"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/kasts"
license="LicenseRef-KDE-Accepted-GPL AND CC0-1.0"
depends="
	gst-plugins-good
	kirigami-addons
	kirigami2
	qt5-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami2-dev
	networkmanager-qt-dev
	openssl-dev>3
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtkeychain-dev
	qt5-qtmultimedia-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	samurai
	syndication-dev
	taglib-dev
	threadweaver-dev
	"
subpackages="$pkgname-lang"
source="https://download.kde.org/stable/plasma-mobile/${pkgver%.*}/kasts-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d91d07979f5279eb80f054404ed57d9b40a9ee42677ce3574ee8bbe50022212e2d970285c6a7e8bcfa04270e8ea330abee05073455d7d998817d9559e9497c67  kasts-22.09.2.tar.xz
"
