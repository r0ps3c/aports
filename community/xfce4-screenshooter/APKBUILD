# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-screenshooter
pkgver=1.11.0
pkgrel=0
pkgdesc="Screenshot application for Xfce4"
url="https://goodies.xfce.org/projects/applications/xfce4-screenshooter"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-lang $pkgname-imgur"
makedepends="
	exo-dev
	hicolor-icon-theme
	libxext-dev
	libxfce4ui-dev
	xfce4-panel-dev
	"
source="https://archive.xfce.org/src/apps/xfce4-screenshooter/${pkgver%.*}/xfce4-screenshooter-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

imgur() {
	pkgdesc="$pkgdesc (imgur uploader script)"
	depends="$pkgname=$pkgver-r$pkgrel curl jq xclip zenity"

	amove usr/lib/xfce4/screenshooter/scripts/imgur-upload.sh
}

sha512sums="
afe7c97799c94e498b4304923d48ec195ebba776ecb626df55b4e5b091e53717d331a7513cde1095b1da5c1fac93fc52ab5a77c67ffbd71931c3bb4f5eb3dc64  xfce4-screenshooter-1.11.0.tar.bz2
"
