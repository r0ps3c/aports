# Contributor: Antoine Martin (ayakael) <dev@ayakael.net>

_pyname="channels"
pkgname=py3-$_pyname
pkgver=4.0.0
pkgrel=0
arch="noarch"
pkgdesc="Developer-friendly asynchrony for Django"
url="https://pypi.python.org/project/$_pyname"
license="BSD-3-Clause"
depends="
	py3-django
	py3-asgiref
	py3-daphne
	"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-installer
	py3-wheel
	"
options="!check" # No testsuite
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
903d7e8cc95de8d2754afc665dac828cc9ee19f0938f4908a16e40b5b0e18c62bf45380311c0cc318f106e2ba4997bb5784e31c85914779bd76f69473e4636f5  py3-channels-4.0.0.tar.gz
"
