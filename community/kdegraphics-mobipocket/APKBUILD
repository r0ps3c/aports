# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kdegraphics-mobipocket
pkgver=23.08.5
pkgrel=0
pkgdesc="A collection of plugins to handle mobipocket files"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.kde.org/applications/graphics/"
license="GPL-2.0-or-later"
depends_dev="
	qt5-qtbase-dev
	kio5-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/graphics/kdegraphics-mobipocket.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/kdegraphics-mobipocket-$pkgver.tar.xz"
subpackages="$pkgname-dev"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8c421e8070c4143b99091f73d3bd3b67571eb76d9de0901e8cb96d8529280ae623531e9245eac2d9ff76d261cf2f66b8262b12909b9e43b270e9a5f4cb47d5b3  kdegraphics-mobipocket-23.08.5.tar.xz
"
