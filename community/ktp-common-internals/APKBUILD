# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=ktp-common-internals
pkgver=23.04.1
pkgrel=0
pkgdesc="Library for KTp"
url="https://github.com/kde/ktp-common-internals"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
license="LGPL-2.1-only AND GPL-2.0-only"
depends_dev="
	kcmutils-dev
	kconfig-dev
	kcoreaddons-dev
	kemoticons-dev
	kiconthemes-dev
	kio-dev
	knotifications-dev
	knotifyconfig-dev
	kpeople-dev
	ktexteditor-dev
	kwallet-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	telepathy-qt-dev
	"
makedepends="
	$depends_dev
	doxygen
	extra-cmake-modules
	samurai
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/ktp-common-internals-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e469e0d1bf5efa275a5b898e2d2c1574221d1da984b5e1b5a23fc45591b1dac51b1a59acca21eb94eda7491dd838a5155c8fc99f824c951de96b5015c79ef50d  ktp-common-internals-23.04.1.tar.xz
"
