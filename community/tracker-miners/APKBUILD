# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=tracker-miners
pkgver=3.5.2
pkgrel=0
pkgdesc="Data miners for tracker"
url="https://gitlab.gnome.org/GNOME/tracker-miners"
# s390x blocked by exempi
arch="all !s390x"
license="GPL-2.0-or-later"
depends="tracker"
makedepends="
	asciidoc
	dbus-dev
	enca-dev
	exempi-dev
	flac-dev
	gexiv2-dev
	giflib-dev
	glib-dev
	gst-plugins-base-dev
	gstreamer-dev
	icu-dev
	libexif-dev
	libgsf-dev
	libgxps-dev
	libiptcdata-dev
	libjpeg-turbo-dev
	libosinfo-dev
	libpng-dev
	libseccomp-dev
	libvorbis-dev
	libxml2-dev
	meson
	networkmanager-dev
	poppler-dev
	taglib-dev
	tiff-dev
	totem-pl-parser-dev
	tracker-dev
	upower-dev
	zlib-dev
	"
checkdepends="
	bash
	coreutils
	py3-gobject3
	python3
	"
subpackages="$pkgname-dbg $pkgname-lang $pkgname-doc"
source="https://download.gnome.org/sources/tracker-miners/${pkgver%.*}/tracker-miners-$pkgver.tar.xz"
options="!check" # needs to install itself

build() {
	abuild-meson \
		-Db_lto=true \
		-Dfunctional_tests="$(want_check && echo true || echo false)" \
		-Dtracker_core=system \
		-Dsystemd_user_services=false \
		-Dminer_rss=false \
		. output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
adb29549c94c68a46e2c5ede8a51bac2d014f772a5dc1c63f5cc6950da7f941e735bf5858c3306d2ad988ce2f60126bc97e5db746afe757b9b7cbc4f90518648  tracker-miners-3.5.2.tar.xz
"
