	openssl-dev>3
	pcre-dev
	rapidjson-dev
	spdlog-dev
	sqlite-dev
	taglib-dev
	tinyxml-dev
	zlib-dev
	"

# Required for Wayland
depends_dev="$depends_dev
	libxkbcommon-dev
	waylandpp-dev
	"

# Required for gbm
depends_dev="$depends_dev
	libinput-dev
	"

# Optional for extra features
depends_dev="$depends_dev
	alsa-lib-dev
	avahi-dev
	bluez-dev
	dav1d-dev
	dbus-dev
	eudev-dev
