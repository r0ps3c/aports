# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=iaito
pkgver=5.9.8
pkgrel=0
pkgdesc="Official QT frontend of radare2"
url="https://www.radare.org/n/iaito.html"
license="GPL-3.0-only"
arch="all"
depends="radare2
	graphviz
	qt6-qtsvg
	"
makedepends="radare2-dev
	bash
	qt6-qtsvg-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/radareorg/iaito/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no testsuite

build() {
	./configure \
		--with-qmake6 \
		--build=$CBUILD \
		--target=$CTARGET \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
195aad84b375d05670d79456090fbcf91cacaecebda9c8b416aaf98a27ce84f24ad3d709745409383dbb48858103c7a9700d274d125c5d480e6108d83b1d3039  iaito-5.9.8.tar.gz
"
