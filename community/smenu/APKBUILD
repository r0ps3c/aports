# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=smenu
pkgver=1.3.0
pkgrel=0
pkgdesc="A standard input word picker"
url="https://github.com/p-gen/smenu"
arch="all"
license="GPL-2.0-only"
makedepends="ncurses-dev"
options="!check"  # tests seems to need full terminal to run
subpackages="$pkgname-doc"
source="https://github.com/p-gen/smenu/archive/v$pkgver/smenu-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
4bf73aafb509b7d2357dac1cf0b5a543a20702ceb65dada75c7cf92348ca37c5b5ac1c2056866a473bae174e65ea206c05b35a366d0b8e58be575514b7cd8cf4  smenu-1.3.0.tar.gz
"
