	$pkgname-libopenexr
	$pkgname-libopenexrcore
	$pkgname-libopenexrutil
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/openexr/openexr/archive/v$pkgver.tar.gz
	fix-x86.patch
	"

