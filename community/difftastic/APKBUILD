# Maintainer: Michał Polański <michal@polanski.me>
pkgname=difftastic
pkgver=0.56.1
pkgrel=0
pkgdesc="Diff tool that understands syntax"
url="https://difftastic.wilfred.me.uk/"
license="MIT"
arch="all"
makedepends="cargo openssl-dev cargo-auditable"
options="net"
source="https://github.com/Wilfred/difftastic/archive/$pkgver/difftastic-$pkgver.tar.gz"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/difft -t "$pkgdir"/usr/bin/
}

sha512sums="
071c1096abcaa4ab3c5a2eaaccc69cf6f07763c30f211caffe068882af2aadf1404b793f7b17d574afc94e3e46800fbc9a2b8c1081ef366abb424a97b87106ce  difftastic-0.56.1.tar.gz
"
