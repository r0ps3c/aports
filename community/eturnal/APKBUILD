	erlang-dev
	openssl-dev
	yaml-dev
	"
_erldepends="
	accept
	conf
	fast_tls
	fast_yaml
	influx_udp
	p1_utils
	poolboy
	prometheus
	prometheus_httpd
	quantile_estimator
	recon
	stun
