# Contributor: Taner Tas <taner76@gmail.com>
# Maintainer: Taner Tas <taner76@gmail.com>
pkgname=gstreamer-vaapi
# NOTE: Upgrade only to even-numbered minor versions (e.g. 1.20.x, 1.22.x)!
#  Odd versions are unstable development releases.
pkgver=1.20.6
pkgrel=0
pkgdesc="GStreamer streaming media framework VA API plug-ins"
url="https://gstreamer.freedesktop.org/"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	eudev-dev
	glib-dev
	gst-plugins-bad-dev
	libva-dev
	libxrandr-dev
	meson
	"
options="!check" # Need actual display with HW accel
source="https://gstreamer.freedesktop.org/src/gstreamer-vaapi/gstreamer-vaapi-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dtests="$(want_check && echo enabled || echo disabled)" \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test -C output --print-errorlogs
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3c386400b90ce7a90c0bec2244f0ef1a069cea053915abad3803e67ef7b859276f91a859ba1c959aedbfcb395058a0b0d917e9dd2f148b1cc038469996388af3  gstreamer-vaapi-1.20.6.tar.xz
"
