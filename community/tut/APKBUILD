# Contributor: Alexey Yerin <yyp@disroot.org>
# Maintainer: Alexey Yerin <yyp@disroot.org>
pkgname=tut
pkgver=1.0.18
pkgrel=6
pkgdesc="TUI for Mastodon"
url="https://github.com/RasmusLindroth/tut"
arch="all"
license="MIT"
makedepends="go"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/RasmusLindroth/tut/archive/refs/tags/$pkgver.tar.gz
"
options="net !check" # no tests

export GOFLAGS="$GOFLAGS -modcacherw -trimpath"
export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build -o tut
}

package() {
	install -D -m755 tut "$pkgdir"/usr/bin/tut
}

sha512sums="
a02fa97e7ea7543afaf009b5c69048fbfd864bef5fb9c9c49f1b06e27a4d06c638a5287f245c8badbb6e04becec3b76f4d03fa767ea3dfc9251f5b8abc12500d  tut-1.0.18.tar.gz
"
