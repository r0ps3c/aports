# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=minizip
pkgver=1.2.13
pkgrel=1
pkgdesc="a library for manipulation with files from .zip archives"
arch="all"
license="Zlib"
url="https://zlib.net/"
makedepends="automake autoconf libtool zlib-dev"
subpackages="$pkgname-static $pkgname-dev"
options="!check" # No testsuite
source="https://web.archive.org/web/20221024065552if_/https://www.zlib.net/zlib-$pkgver.tar.xz
	zlib-1.2.8-minizip-include.patch
	CVE-2023-45853.patch
	"

builddir="$srcdir/zlib-$pkgver"/contrib/minizip

# secfixes:
#   1.2.13-r1:
#     - CVE-2023-45853
#   1.2.12-r0:
#     - CVE-2018-25032

prepare() {
	default_prepare
	autoreconf -fi
}

build() {
	./configure \
		--prefix=/usr \
		--enable-static=yes
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

