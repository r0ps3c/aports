_pyname=backports_abc
pkgname=py3-$_pyname
pkgver=0.5
pkgrel=0
arch="noarch"
pkgdesc="A backport of recent additions to the 'collections.abc' module."
url="https://pypi.python.org/project/$_pyname"
license="MIT"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-installer
	py3-wheel
	python3-dev
	"
checkdepends="
	py3-pytest
	"
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver \
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 ./tests.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
5c2bc01bce8d3ed482bf5d8361a20f9afa3edc1c50280f0a01ffb890690b92296fcbfa68f79677fc3ebba851617f339cb6367ccdd0fadf1127a4e3c030784b7d  py3-backports_abc-0.5.tar.gz
"
