pkgname=bats
pkgver=1.11.0
pkgrel=1
pkgdesc="Meta package for Bats"
url="https://bats-core.readthedocs.io/"
arch="noarch"
license="MIT"
depends="
	bats-core
	bats-support
	bats-assert
	bats-file
	"
install="bats.post-install"
options="!check" # No tests for a metapkg

package() {
	mkdir -p "$pkgdir"
}
