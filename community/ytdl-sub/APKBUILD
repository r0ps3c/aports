# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=ytdl-sub
pkgver=2025.02.05
pkgrel=0
pkgdesc="tool for downloading media with yt-dlp and creating metadata"
url="https://github.com/jmbannon/ytdl-sub"
arch="noarch"
license="GPL-3.0-only"
depends="
	ffmpeg
	py3-colorama
	py3-mediafile
	py3-mergedeep
	py3-yaml
	yt-dlp-core
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest py3-pytest-cov"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeload.github.com/jmbannon/ytdl-sub/tar.gz/refs/tags/$pkgver"
# tests connect out to the internet
options="!check"

prepare() {
	default_prepare

	# hardcoded incorrect version
	cat >>src/ytdl_sub/__init__.py <<-EOF
	__pypi_version__ = "$pkgver"
	__local_version__ = "$pkgver"
	EOF
}

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
1022a26fea6cb8b7fa37182bdcf0fed11ce9a5ffe53a97d4e6f27083b1715e1e531b2215a261f4f407a74ee9c66295314aeac04ce838e7b3315aa9d43bf162a6  ytdl-sub-2025.02.05.tar.gz
"
