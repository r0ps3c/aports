# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=qt6
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qt6-qtwebchannel
pkgver=6.8.1
pkgrel=0
pkgdesc="Provides access to QObject or QML objects from HTML clients"
url="https://qt.io/"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtwebsockets-dev
	"
case "$CARCH" in
	armhf) ;;
	*) depends_dev="$depends_dev qt6-qtdeclarative-dev" ;;
esac
makedepends="$depends_dev
	cmake
	perl
	samurai
	"
subpackages="$pkgname-dev"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac
source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtwebchannel-everywhere-src-${pkgver/_/-}.tar.xz"
options="!check" # No tests
builddir="$srcdir/qtwebchannel-everywhere-src-${pkgver/_/-}"

build() {
	export CFLAGS="$CFLAGS -g1 -flto=auto"
	export CXXFLAGS="$CXXFLAGS -g1 -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DINSTALL_BINDIR=lib/qt6/bin \
		-DINSTALL_DOCDIR=share/doc/qt6 \
		-DINSTALL_ARCHDATADIR=lib/qt6 \
		-DINSTALL_DATADIR=share/qt6 \
		-DINSTALL_INCLUDEDIR=include/qt6 \
		-DINSTALL_MKSPECSDIR=lib/qt6/mkspecs \
		-DINSTALL_EXAMPLESDIR=share/doc/qt6/examples
	cmake --build build --parallel
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	amove usr/lib/qt6/sbom
}

sha512sums="
43907776dbdea09821819aa6112e56288848b0975be24333977d9177cbba5203bba5841e269dfc7590f40f87a96cbe4c9416e0aba821ff96798b627f2203a51a  qtwebchannel-everywhere-src-6.8.1.tar.xz
"
