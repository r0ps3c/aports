# Maintainer: Michał Polański <michal@polanski.me>
pkgname=libdecor
pkgver=0.1.1
pkgrel=1
pkgdesc="Client-side decorations library for Wayland clients"
url="https://gitlab.freedesktop.org/libdecor/libdecor"
license="MIT"
arch="all"
makedepends="
	meson
	cairo-dev
	dbus-dev
	pango-dev
	wayland-dev
	wayland-protocols
	"
subpackages="$pkgname-dev"
source="https://gitlab.freedesktop.org/libdecor/libdecor/-/archive/$pkgver/libdecor-$pkgver.tar.gz"
options="!check" # no test suite

build() {
	abuild-meson \
		-Ddemo=false \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
40b1e355f28d4b18ce35b1c096592c81015a1fd4b2db0f3d58f14825388f6614e6dd28efa0368b7c133e094f6aca9db6a7a27dbd4ffdd349b5e8d7619fd3e0be  libdecor-0.1.1.tar.gz
"
