# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=ruby-rbvmomi2
_gemname=rbvmomi2
pkgver=3.8.0
pkgrel=0
pkgdesc="Ruby interface to the VMware vSphere API"
url="https://github.com/ManageIQ/rbvmomi2"
arch="noarch"
license="MIT"
depends="
	ruby
	ruby-builder
	ruby-json
	ruby-nokogiri
	ruby-optimist
	"
checkdepends="
	ruby-rake
	ruby-test-unit
	"
source="https://github.com/ManageIQ/rbvmomi2/archive/v$pkgver/$_gemname-$pkgver.tar.gz
	fix-missing-require-json.patch
	remove-extra-test-deps.patch
	"
builddir="$srcdir/$_gemname-$pkgver"

build() {
	gem build $_gemname.gemspec
}

check() {
	rake test
}

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install --local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		$_gemname

	rm -r "$gemdir"/cache \
		"$gemdir"/doc \
		"$geminstdir"/LICENSE \
		"$geminstdir"/*.md
}

sha512sums="
