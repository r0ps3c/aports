# Maintainer: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
pkgname=py3-emoji
_pkgorig=emoji
pkgver=2.10.1
pkgrel=0
pkgdesc="Emoji terminal output for Python"
url="https://github.com/carpedm20/emoji"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest-xdist"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/carpedm20/emoji/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$_pkgorig-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -n auto -k 'not test_zwj_replace and not test_zwj_remove'
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
d4e5a2f434a916e47c78ffffda277d239da57aa028e53b2d92507d1f0274540fc613b9fc6ce6b5d60b48813eda1e6d9b6b3e102aea4fca8df722a5d2e5827c25  py3-emoji-2.10.1.tar.gz
"
