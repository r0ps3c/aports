# Contributor: André Klitzing <aklitzing@@gmail.com>
# Maintainer: André Klitzing <aklitzing@gmail.com>
pkgname=croc
pkgver=9.6.1
pkgrel=5
pkgdesc="Easily and securely send things from one computer to another"
url="https://github.com/schollz/croc"
license="MIT"
arch="all"
makedepends="go"
source="https://github.com/schollz/croc/releases/download/v$pkgver/croc_${pkgver}_src.tar.gz"

# secfixes:
#   9.1.0-r0:
#     - CVE-2021-31603

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	export CGO_LDFLAGS="$LDFLAGS"
	export GOFLAGS="$GOFLAGS -trimpath -mod=vendor"
	go mod vendor
	go build
}

check() {
	go test ./...
}

package() {
	install -Dm755 -t "$pkgdir"/usr/bin croc
}

sha512sums="
9f32ae4997c813ca352fbff9953ee9401b5dcf2e7a2831f5edf640ad0d26fd8c13946c4d80c07078946ff8800ba02854652f8af28f820dedace69f90f0d9e42d  croc_9.6.1_src.tar.gz
"
