# Contributor: Eivind Uggedal <eivind@uggedal.com>
# Maintainer:
pkgname=py3-flask-wtf
_pkgname=flask_wtf
pkgver=1.1.2
pkgrel=0
pkgdesc="Flask WTForms extension"
url="https://pypi.org/project/Flask-WTF"
arch="noarch"
license="BSD-3-Clause"
depends="python3 py3-flask py3-wtforms"
makedepends="py3-gpep517 py3-hatchling"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

replaces="py-flask-wtf" # Backwards compatibility
provides="py-flask-wtf=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}
sha512sums="
2589877efd02f488842fa2211ce9ef8fe69d5bd4dce01ee842383f2554519480cdfa30c85e443f4f607282639d04e94a2ffb542585f493fd27f528abac3bfd22  flask_wtf-1.1.2.tar.gz
"
