# Contributor: Aiden Grossman <agrossman154@yahoo.com>
# Maintainer: Aiden Grossman <agrossman154@yahoo.com>
pkgname=py3-comm
pkgver=0.2.0
pkgrel=0
pkgdesc="Python comm implementation for the Jupyter kernel protocol"
url="https://github.com/ipython/comm"
arch="noarch"
license="BSD-3-Clause"
depends="py3-traitlets"
makedepends="py3-gpep517 py3-hatchling"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/ipython/comm/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/comm-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages test-env
	test-env/bin/python3 -m installer \
		.dist/*.whl
	test-env/bin/python3 -m pytest
}

package() {
	python3 -m installer --destdir="$pkgdir" .dist/*.whl
}

sha512sums="
6336d9ff2fcf9016d3616ec5c7f6715e8abffc878a0f5b8dabcd06cd17f851cf562e918bd43b55e435adf6da1e635e7152c3b525a5d718b04e7f98b3c8096505  py3-comm-0.2.0.tar.gz
"
