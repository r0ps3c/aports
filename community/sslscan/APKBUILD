pkgrel=1
pkgdesc="fast SSL/TLS configuration scanner"
url="https://github.com/rbsec/sslscan"
arch="all"
license="GPL-3.0-or-later OpenSSL"
makedepends="zlib-dev openssl-dev>3 perl"
