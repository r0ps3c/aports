# Contributor: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
maintainer="fossdd <fossdd@pwned.life>"
pkgname=py3-pyforgejo
pkgver=2.0.1
pkgrel=0
pkgdesc="A client library for accessing the Forgejo API"
url="https://codeberg.org/harabat/pyforgejo"
arch="noarch"
license="MIT"
depends="
	py3-httpx
	py3-attrs
	py3-dateutil
	"
makedepends="py3-gpep517 py3-poetry-core"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/harabat/pyforgejo/archive/$pkgver.tar.gz"
builddir="$srcdir/pyforgejo"
options="!check" # no tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
85bdebded7259987d1fbe908349c16252c12b867306fc6ab31d0ffdcfdfb24f9c3bf521b18d1a5edb0cd670ae10b85288effafc29348d3d81eba9f13bdc6d785  py3-pyforgejo-2.0.1.tar.gz
"
