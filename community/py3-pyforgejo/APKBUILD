# Maintainer: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
pkgname=py3-pyforgejo
pkgver=1.0.3
pkgrel=0
pkgdesc="A client library for accessing the Forgejo API"
url="https://codeberg.org/harabat/pyforgejo"
arch="noarch"
license="MIT"
depends="
	py3-httpx
	py3-attrs
	py3-dateutil
	"
makedepends="py3-gpep517 py3-poetry-core"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/p/pyforgejo/pyforgejo-$pkgver.tar.gz"
builddir="$srcdir/pyforgejo-$pkgver"
options="!check" # no tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
1091cf22b3b54ca99280ae6f1123a590e4086f5e90faf9c5f8ebf449131cb213f842ac70260c2c77233b22b18a49bd6f0933a1bdaa739e858c565eb7c1bcab5e  py3-pyforgejo-1.0.3.tar.gz
"
