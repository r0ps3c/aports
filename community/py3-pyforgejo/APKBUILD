# Contributor: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
maintainer="fossdd <fossdd@pwned.life>"
pkgname=py3-pyforgejo
pkgver=2.0.3
pkgrel=0
pkgdesc="A client library for accessing the Forgejo API"
url="https://codeberg.org/harabat/pyforgejo"
arch="noarch"
license="MIT"
depends="
	py3-httpx
	py3-attrs
	py3-dateutil
	"
makedepends="py3-gpep517 py3-poetry-core"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/harabat/pyforgejo/archive/$pkgver.tar.gz"
builddir="$srcdir/pyforgejo"
options="!check" # no tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
41fdff7c3edaa077509dfe5885a0669001d5f1470705e88498f3cdb45346bcedd6042543a86f08af7cafb8742c49067ad8b62d318a8c0b3537c2952c502dd9b5  py3-pyforgejo-2.0.3.tar.gz
"
