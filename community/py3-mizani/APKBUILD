# Contributor: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
# Maintainer: Iztok Fister, Jr. <iztok@iztok-jr-fister.eu>
pkgname=py3-mizani
pkgver=0.9.1
pkgrel=0
pkgdesc="A scales package for python"
url="https://github.com/has2k1/mizani"
arch="noarch"
license="MIT"
depends="
	python3
	py3-numpy
	py3-scipy
	py3-pandas
	py3-matplotlib
	py3-palettable
	py3-tzdata
	"
checkdepends="python3-dev py3-pytest py3-pytest-cov"
makedepends="py3-gpep517 py3-setuptools_scm py3-wheel"
subpackages="$pkgname-pyc"
source="https://github.com/has2k1/mizani/archive/v$pkgver/mizani-$pkgver.tar.gz"
builddir="$srcdir/mizani-$pkgver"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m pytest -k 'not breaks'
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/mizani-$pkgver-py3-none-any.whl

	rm -r "$pkgdir"/usr/lib/python3.*/site-packages/mizani/tests
}

sha512sums="
46a50268b4696c4f19d9165930632ec8f11321363b2b3a61dffa25a94e983dab14e8ed5eb9d309ff740fdc1f478d27abe8fa6069abd532152999e00d028ac2a5  mizani-0.9.1.tar.gz
"
