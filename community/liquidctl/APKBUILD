# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer:
pkgname=liquidctl
pkgver=1.12.0
pkgrel=0
pkgdesc="Liquid Cooler Control"
url="https://github.com/liquidctl/liquidctl"
options="!check" # Requires writable /var/run
arch="noarch"
license="GPL-3.0-or-later"
depends="
	py3-colorlog
	py3-docopt
	py3-hidapi
	py3-smbus
	py3-usb
	python3
	"
makedepends="
	py3-gpep517
	py3-installer
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="py3-pytest"
source="$pkgname-$pkgver.tar.gz::https://github.com/liquidctl/liquidctl/archive/v$pkgver.tar.gz"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
fa352648179625fd8da6f829d1b03613bd7de1d03e3ecd871d68aa011ac435c23f81dfc21248262faaca93de12fd598081e297a1ef58fb7c3e864c8a13ce4848  liquidctl-1.12.0.tar.gz
"
