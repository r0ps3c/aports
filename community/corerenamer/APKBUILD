# Contributor: rahmanshaber <rahmanshaber@yahoo.com>
# Maintainer: rahmanshaber <rahmanshaber@yahoo.com>
pkgname=corerenamer
pkgver=4.4.0
pkgrel=1
pkgdesc="A batch file renamer from C-Suite"
arch="all"
url="https://gitlab.com/cubocore"
license="GPL-3.0-or-later"
depends="qt5-qtsvg"
makedepends="qt5-qtbase-dev libcprime-dev cmake ninja"
source="$pkgname-$pkgver.tar.gz::https://gitlab.com/cubocore/corerenamer/-/archive/v$pkgver/corerenamer-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"
options="!check"

build() {
	cmake -B build \
		-GNinja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=None
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2dac275ffd65c8571b372665d7bbfacde7cecc20bc91b8afa841bab56207cefde5751a873ec56764889c5bcf6dbbedd6cfb21f3f5f385f3f9b3ac623f0a67917  corerenamer-4.4.0.tar.gz
"
