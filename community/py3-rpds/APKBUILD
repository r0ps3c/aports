# Maintainer: psykose <alice@ayaya.dev>
pkgname=py3-rpds
pkgver=0.8.11
pkgrel=0
pkgdesc="Python bindings to the Rust rpds crate"
url="https://github.com/crate-py/rpds"
arch="all"
license="MIT"
makedepends="
	cargo
	py3-gpep517
	py3-maturin
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/crate-py/rpds/releases/download/v$pkgver/rpds_py-$pkgver.tar.gz"
builddir="$srcdir/rpds_py-$pkgver"
options="net"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--config-json '{"build-args": "--frozen"}' \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b7b6d5419b1164a90dfda4884a2cea36d7760a0e63d50fcc048da3d4f6f675e1f9b9d517352c9fc145fc38b374dc9c06d98637ce1ee2c64b734ede1bbd160c70  rpds_py-0.8.11.tar.gz
"
