# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=monolith
pkgver=2.8.0
pkgrel=0
pkgdesc="CLI tool for saving complete web pages as a single HTML file"
url="https://github.com/Y2Z/monolith"
# riscv64: rust is broken on this arch
arch="all !riscv64"
license="CC0-1.0"
makedepends="
	cargo
	cargo-auditable
	openssl-dev
	"
source="https://github.com/Y2Z/monolith/archive/v$pkgver/monolith-$pkgver.tar.gz"


prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -D -m755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}

sha512sums="
1b77a18f00db059f3175f6eeb7227f83c3e93fc9cd257fefe2936e8cd180f2acf6282072655b0d1b8c2ed3e324484cb6b0e6eb97d51a393e1824a5772c4559cd  monolith-2.8.0.tar.gz
"
