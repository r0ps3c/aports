# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-clipman-plugin
pkgver=1.6.4
pkgrel=0
pkgdesc="Clipboard manager plugin for the Xfce panel"
url="https://goodies.xfce.org/projects/panel-plugins/xfce4-clipman-plugin"
arch="all"
license="GPL-2.0-or-later"
makedepends="libxfce4ui-dev xfce4-panel-dev libxtst-dev exo-dev"
subpackages="$pkgname-lang"
source="https://archive.xfce.org/src/panel-plugins/xfce4-clipman-plugin/${pkgver%.*}/xfce4-clipman-plugin-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
e2cb4068ad00e89d848c72ab4c1b7aac0d41bdd006b60afd09e0323fca1c903eeee3b04a68221f5a2cb6be1347eac8879dfa6bd8b0483c2a075eb36e8cf65ea7  xfce4-clipman-plugin-1.6.4.tar.bz2
"
