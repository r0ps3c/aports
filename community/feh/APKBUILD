# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=feh
pkgver=3.9.1
pkgrel=0
pkgdesc="Fast, lightweight image viewer which uses imlib2"
url="https://feh.finalrewind.org"
arch="all"
license="MIT-feh"
subpackages="$pkgname-doc"
makedepends="
	curl-dev
	file-dev
	imlib2-dev
	libjpeg-turbo-dev
	libpng-dev
	libxinerama-dev
	libxt-dev
	"
checkdepends="perl-utils perl-test-command"
source="https://feh.finalrewind.org/feh-$pkgver.tar.bz2
	fix-tests.patch"

build() {
	make magic=1 PREFIX=/usr
}

check() {
	make test
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		bin_dir="$pkgdir"/usr/bin \
		man_dir="$pkgdir"/usr/share/man \
		doc_dir="$pkgdir"/usr/share/doc/$pkgname \
		example_dir="$pkgdir"/usr/share/doc/$pkgname/examples \
		install
}

sha512sums="
78682ec80df6b6655dbc18774ee95b3d68f1711a50129a9befb8adfb8c1a74aeede2493a35955687cdc2aa079978927727dac02543643418ef8deefa0d8c6d05  feh-3.9.1.tar.bz2
fe0971a0d23444195d142e0fc502b7105c038b055128081c3b780acdb59b89f0b67931d17e4fae0da5b20fd96d32429a69c2997ab2e1f1e8a9bbf13ab59d6375  fix-tests.patch
"
