# Maintainer: Leon Marz <main@lmarz.org>
pkgname=openxr
pkgver=1.1.47
pkgrel=0
pkgdesc="OpenXR loader library"
url="https://khronos.org/openxr"
arch="all"
license="Apache-2.0"
makedepends="cmake
	jsoncpp-dev
	jsoncpp-static
	mesa-dev
	samurai
	vulkan-loader-dev
	wayland-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/OpenXR-SDK/archive/release-$pkgver.tar.gz"
builddir="$srcdir/OpenXR-SDK-release-$pkgver"
options="!check" # no check available

build() {
	case "$CARCH" in
		armhf)
			export CXXFLAGS="$CXXFLAGS -D_M_ARM" ;;
	esac

	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
3b99b34fa152fc8e5d84abb2d95e07ec526057832b5cd33a273515105a0d32d8c485d22bedee46ca42bd91a97ec7b7e0dee0ed6e2da9255c9dd04e1422197c3f  openxr-1.1.47.tar.gz
"
