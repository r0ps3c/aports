maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qxmpp
pkgver=1.10.0
pkgrel=1
pkgdesc="Cross-platform C++ XMPP client and server library"
arch="all"
url="https://github.com/qxmpp-project/qxmpp"
license="LGPL-2.1"
makedepends="
	cmake
	doxygen
	graphviz
	libomemo-c-dev
	qca-qt6-dev
	qt6-qtbase-dev
	qt6-qt5compat-dev
	samurai
	"
source="https://github.com/qxmpp-project/qxmpp/archive/v$pkgver/qxmpp-v$pkgver.tar.gz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_EXAMPLES=OFF \
		-DBUILD_DOCUMENTATION=ON \
		-DBUILD_OMEMO=ON
	cmake --build build
}

check() {
	# tst_qxmppiceconnection and tst_qxmpptransfermanager require a network connection
	ctest --test-dir build -E "tst_qxmpp(iceconnection|transfermanager)"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f579ac1cd5f7744938d628ac74d346efe23d62ef6eca2425be570e4a601788a1a581021d0227411aad6a310d8a14a8b1f7806f572be7f0b1acfce00b6bc6502a  qxmpp-v1.10.0.tar.gz
"
