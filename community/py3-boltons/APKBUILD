pkgname=py3-boltons
pkgver=21.0.0
pkgrel=4
pkgdesc="Bolted-on functionality for python3"
url="https://github.com/mahmoud/boltons"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
makedepends="py3-setuptools"
checkdepends="py3-pytest py3-pytest-cov"
source="$pkgname-$pkgver-2.tar.gz::https://github.com/mahmoud/boltons/archive/$pkgver.tar.gz
	$pkgname-fix-ecoutils.patch::https://github.com/mahmoud/boltons/commit/270e974975984f662f998c8f6eb0ebebd964de82.patch"
builddir="$srcdir/boltons-$pkgver"
options="!check" # fail with 3.11

build() {
	python3 setup.py build
}

check() {
	py.test-3
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

