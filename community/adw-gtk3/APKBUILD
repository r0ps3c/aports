# Contributor: knuxify <knuxify@gmail.com>
# Maintainer: knuxify <knuxify@gmail.com>
pkgname=adw-gtk3
pkgver=5.5
pkgrel=0
pkgdesc="The theme from libadwaita ported to GTK-3"
url="https://github.com/lassekongo83/adw-gtk3"
arch="noarch"
license="LGPL-2.1-or-later"
makedepends="meson sassc"
source="https://github.com/lassekongo83/adw-gtk3/archive/refs/tags/v$pkgver/adw-gtk3-$pkgver.tar.gz"
options="!check" # no test suite

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
d3ae6ddcc87a09bb207c6763acda07bb657387c373ca529cf75f4abd4aa0ca10d740c427434a4d0e7d198b835547c23ad5cd33463eaae84e60f56c075ac6ae08  adw-gtk3-5.5.tar.gz
"
