# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=py3-httpcore
pkgver=0.17.1
pkgrel=0
pkgdesc="Minimal HTTP client"
url="https://www.encode.io/httpcore/"
license="BSD-3-Clause"
arch="noarch !armhf !ppc64le" # limited by py3-anyio
depends="
	python3
	py3-anyio
	py3-certifi
	py3-h11
	py3-sniffio
	"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="
	py3-h2
	py3-hpack
	py3-hyperframe
	py3-pytest
	py3-pytest-httpbin
	py3-pytest-trio
	py3-socksio
	"
subpackages="$pkgname-pyc"
source="https://github.com/encode/httpcore/archive/$pkgver/py3-httpcore-$pkgver.tar.gz"
builddir="$srcdir/httpcore-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	PYTHONPATH="$PWD/build/lib" pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/httpcore-$pkgver-py3-none-any.whl
}

sha512sums="
73935a22e6f91a4f9e49865066badc9b6f4ade342d294a2e419d5381ead18d2bd5f4e9cee4bfabfa66e8d0a0796d62a3def906dd0e9924b9e5c1d682ceb7edce  py3-httpcore-0.17.1.tar.gz
"
