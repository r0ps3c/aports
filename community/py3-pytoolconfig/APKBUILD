# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=py3-pytoolconfig
pkgver=1.2.4
pkgrel=0
pkgdesc="Python tool configuration"
url="https://github.com/bageljrkhanofemus/pytoolconfig"
arch="noarch"
license="LGPL-3.0-or-later"
depends="
	py3-docutils
	py3-packaging
	py3-platformdirs
	py3-sphinx
	py3-tabulate
	python3
	"
makedepends="py3-gpep517 py3-pdm-backend py3-installer"
checkdepends="py3-pytest"
source="https://github.com/bagel897/pytoolconfig/archive/v$pkgver/py3-pytoolconfig-$pkgver.tar.gz"
builddir="$srcdir/pytoolconfig-$pkgver"

build() {
	export PDM_PEP517_SCM_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 2
}

check() {
	python3 -m venv --system-site-packages test-env
	test-env/bin/python3 -m installer dist/*.whl
	test-env/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
7859bb4d16cd18e1e73ef2ac8cadd4cc5bd048f4db32e7ad8a73b02cdc594a809d906c09bee14a8537e94f7149aade2c7c6a08bb979e47a26bd900caf695349a  py3-pytoolconfig-1.2.4.tar.gz
"
