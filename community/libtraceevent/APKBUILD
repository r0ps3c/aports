# Maintainer:
pkgname=libtraceevent
pkgver=1.8.0
pkgrel=0
pkgdesc="Linux kernel trace event library"
url="https://git.kernel.org/pub/scm/libs/libtrace/libtraceevent.git"
arch="all"
license="LGPL-2.1-or-later AND GPL-2.0-or-later"
depends_dev="linux-headers"
makedepends="
	$depends_dev
	asciidoc
	meson
	xmlto
	"
checkdepends="cunit-dev"
subpackages="$pkgname-plugins $pkgname-dev"
source="https://git.kernel.org/pub/scm/libs/libtrace/libtraceevent.git/snapshot/libtraceevent-$pkgver.tar.gz"

build() {
	abuild-meson \
		--default-library=shared \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

plugins() {
	pkgdesc="$pkgdesc (plugins)"
	# it had the same plugin files
	replaces="perf<6.2"

	amove usr/lib/libtraceevent/plugins
}

sha512sums="
256b244665b2f065a1d66a5aa5570120a33b9faaaa8caa991966569a254f3d2b45f65241d20477c79942dfeef8206af961852ad5a9f632721ad8d88625807657  libtraceevent-1.8.0.tar.gz
"
