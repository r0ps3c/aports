# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=ocrmypdf
pkgver=14.0.2
pkgrel=0
pkgdesc="Add OCR text layer to scanned PDF files"
url="https://github.com/ocrmypdf/OCRmyPDF"
arch="noarch !s390x !riscv64" # pngquant
license="MIT"
depends="
	ghostscript
	jbig2enc
	leptonica
	pngquant
	py3-coloredlogs
	py3-deprecation
	py3-img2pdf
	py3-packaging
	py3-pdfminer
	py3-pikepdf
	py3-pillow
	py3-pluggy
	py3-reportlab
	py3-tqdm
	python3
	qpdf
	tesseract-ocr
	unpaper
	"
makedepends="py3-gpep517 py3-setuptools_scm py3-wheel"
checkdepends="py3-pytest py3-pytest-cov py3-pytest-xdist"
source="https://files.pythonhosted.org/packages/source/o/ocrmypdf/ocrmypdf-$pkgver.tar.gz"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 1
}

check() {
	PYTHONPATH=src \
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/ocrmypdf*.whl
}

sha512sums="
51e508949710d0e609fe2bdab8e02dd1c1ac2c72f6cb087114af01ffe8568ba9a647494f9d28fc66404e61bd9b0f789b31e8e59504dabfdb382da53bf16680d1  ocrmypdf-14.0.2.tar.gz
"
