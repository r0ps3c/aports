# Contributor: Peter Shkenev <santurysim@gmail.com>
# Maintainer: Peter Shkenev <santurysim@gmail.com>
pkgname=gajim
pkgver=1.6.1
pkgrel=0
_pkgver_suffix=""
pkgdesc="A full featured and easy to use XMPP client"
url="https://gajim.org/"
arch="noarch"
license="GPL-3.0-only"
depends="
	dbus
	dbus-x11
	gtk+3.0
	gtksourceview4
	libsoup3
	py3-cairo
	py3-css-parser
	py3-gobject3
	py3-keyring
	py3-nbxmpp
	py3-openssl
	py3-packaging
	py3-pillow
	py3-precis-i18n
	sqlite
	pango
	"
makedepends="py3-setuptools python3-dev gettext-dev"
checkdepends="xvfb-run font-dejavu"
source="
	https://gajim.org/downloads/${pkgver:0:3}/gajim-$pkgver$_pkgver_suffix.tar.gz
	"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	python3 setup.py build
}

check() {
	xvfb-run python3 -m unittest discover -s test
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

sha512sums="
080ae0c5c86170085361b30fa7e60e4b8bbcf002e0b46307d809a6e1a1bbcd070391bc03dcb44399d73dab2562434308aaf907cd05813e6dc5b464e6cdebf537  gajim-1.6.1.tar.gz
"
