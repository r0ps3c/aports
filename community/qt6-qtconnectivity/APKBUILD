# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=qt6
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qt6-qtconnectivity
pkgver=6.8.2
pkgrel=0
pkgdesc="Provides access to Bluetooth hardware"
url="https://qt.io/"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="bluez-dev"
makedepends="$depends_dev
	cmake
	perl
	qt6-qtbase-dev
	qt6-qtbase-private-dev
	samurai
	"
case "$CARCH" in
	armhf) ;;
	*)
		depends_dev="$depends_dev
			qt6-qtdeclarative-dev
			"
		makedepends="$makedepends
			qt6-qtdeclarative-dev
			"
		;;
esac

subpackages="$pkgname-dev"
builddir="$srcdir/qtconnectivity-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtconnectivity-everywhere-src-${pkgver/_/-}.tar.xz"
options="!check" # No usable tests

build() {
	export CFLAGS="$CFLAGS -g1 -flto=auto"
	export CXXFLAGS="$CXXFLAGS -g1 -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DINSTALL_BINDIR=lib/qt6/bin \
		-DINSTALL_DOCDIR=share/doc/qt6 \
		-DINSTALL_ARCHDATADIR=lib/qt6 \
		-DINSTALL_DATADIR=share/qt6 \
		-DINSTALL_INCLUDEDIR=include/qt6 \
		-DINSTALL_MKSPECSDIR=lib/qt6/mkspecs \
		-DINSTALL_EXAMPLESDIR=share/doc/qt6/examples \
		-DBUILD_TESTING=ON
	cmake --build build --parallel
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	amove usr/lib/qt6/sbom
}

sha512sums="
b1310fc90c7a64a4d89586fd38119377b3b67ead57271c6713897d649b2154cd55bd07c97a53f12e7a9d720a1b8b6b630eeea43e44c6798f6313ea8e70e10767  qtconnectivity-everywhere-src-6.8.2.tar.xz
"
