pkgname=py3-imap-tools
_pyname="imap-tools"
pkgver=1.7.0
pkgrel=0
arch="noarch"
pkgdesc="Work with email and mailbox by IMAP"
url="https://pypi.python.org/project/imap-tools"
license="Apache-2.0"
makedepends="
	py3-setuptools
	py3-gpep517
	py3-wheel
	"
options="!check" # No testsuite
source="$pkgname-$pkgver.tar.gz::https://pypi.io/packages/source/i/imap-tools/imap-tools-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver
subpackages="$pkgname-pyc"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
dec7b6304523d6c081df34ce281d5b8fed83a4434a8c563c3369a31fb72a05623ffaf183d946eeda8a7659d50824e4800845d3f94c00a4d8e8377e428b258e94  py3-imap-tools-1.7.0.tar.gz
"
