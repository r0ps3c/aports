# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=py3-pyee
pkgver=11.0.1
pkgrel=0
pkgdesc="A port of node.js's EventEmitter to Python"
url="https://github.com/jfhbrook/pyee"
arch="noarch"
license="MIT"
depends="
	py3-async_generator
	py3-trio
	py3-twisted
	py3-vcversioner
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-mock
	py3-pytest-asyncio
	py3-pytest-trio
	pytest
	"
subpackages="$pkgname-pyc"
source="https://pypi.python.org/packages/source/p/pyee/pyee-$pkgver.tar.gz"
builddir="$srcdir/pyee-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
83a0bbcdfafb513cd1592d17fd3fd200839866ce9c03313a29bf7745059fefafc70896229ae6d85145a1c9a08f814dedac669a80db326e69163041569f0f60e8  pyee-11.0.1.tar.gz
"
