# Maintainer:
pkgname=pipx
pkgver=1.3.2
pkgrel=0
pkgdesc="Install and Run Python Applications in Isolated Environments"
url="https://github.com/pypa/pipx"
arch="noarch"
license="MIT"
depends="
	py3-argcomplete
	py3-colorama
	py3-packaging
	py3-platformdirs
	py3-userpath
	"
makedepends="
	py3-gpep517
	py3-hatchling
	py3-hatch-vcs
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/pypa/pipx/archive/refs/tags/$pkgver.tar.gz"
options="!check" # need some packages that i'm not sure of

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -p no:warnings
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
a0a21c22a867b7bae3d6aceb68e1c5ee404ad794211c7f9014223d510250953b80a5fb525a11a422ae54ee9b0ede81220fa1e145f91b934bf000185a50b613f7  pipx-1.3.2.tar.gz
"
