# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=ruby-timecop
_gemname=${pkgname#ruby-}
pkgver=0.9.6
pkgrel=0
pkgdesc="A gem providing 'time travel' and 'time freezing' capabilities"
url="https://github.com/travisjeffery/timecop"
arch="noarch"
license="MIT"
depends="ruby"
options="!check"  # tests require dependencies we don't have yet
source="$pkgname-$pkgver.tar.gz::https://github.com/travisjeffery/$_gemname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$_gemname-$pkgver"

build() {
	gem build $_gemname.gemspec
}

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"

	gem install --local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		$_gemname

	# Remove unnecessary files.
	cd "$gemdir"
	rm -r cache/ build_info/ doc/
	cd gems/$_gemname-$pkgver
	rm -r test/ Rakefile README* LICENSE
}

sha512sums="
44cd1877187f8b7af9a4383027aafad96843f88360eca0cfae3257caabf17454f0ee738c66f828763dab44471043639687156049dbace3207c847b6a2a9842c5  ruby-timecop-0.9.6.tar.gz
"
