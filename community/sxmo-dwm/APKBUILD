# Maintainer: Anjandev Momi <anjan@momi.ca>
# Contributor: Maarten van Gompel <proycon@anaproy.nl>
pkgname=sxmo-dwm
pkgver=6.3.0
pkgrel=0
pkgdesc="Dwm fork for Sxmo UI; supports volume-key hotkeys, swallow, keyboard, among other patches"
url="https://git.sr.ht/~mil/sxmo-dwm"
arch="all"
license="MIT"
depends="xorg-server"
makedepends="libxft-dev libx11-dev libxinerama-dev pango-dev"
subpackages="$pkgname-doc"
provides="dwm"
provider_priority=10
options="!check" # has no tests
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~mil/sxmo-dwm/archive/$pkgver.tar.gz"

prepare() {
	default_prepare
	sed -i -e '/CFLAGS/{s/-Os//;s/=/+=/}' \
		-e '/LDFLAGS/{s/=/+=/}' \
		"$builddir"/config.mk
}

build() {
	make X11INC=/usr/include/X11 \
		X11LIB=/usr/lib/X11 \
		FREETYPEINC=/usr/include/freetype2 \
		-C "$builddir"
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		-C "$builddir" install
}

sha512sums="
2b59de49a03e8f36296f85b9f304292e98db0fe314f2ce7e222991f8a6be5c17c230ecdd92d26ce8591490ef09ee25e75e984919cbb8e90f7a9bc3007fb94544  sxmo-dwm-6.3.0.tar.gz
"
