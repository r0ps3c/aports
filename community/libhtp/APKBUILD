# Contributor: Steve McMaster <code@mcmaster.io>
# Maintainer: Steve McMaster <code@mcmaster.io>
pkgname=libhtp
pkgver=0.5.44
pkgrel=0
pkgdesc="HTTP normalizer and parser library"
url="https://github.com/OISF/libhtp"
arch="all"
license="BSD-3-Clause"
depends_dev="zlib-dev"
makedepends="$depends_dev automake autoconf libtool"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/OISF/libhtp/archive/$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-static
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

check() {
	make check
}

sha512sums="
e538d022110eef808a7ab040ca58004f1a8759d315ad954455d6da9a088cf80d53489529234fbfdd9fd20b8424d49b4a9635673cd25612c63ef9cc90220a4e82  libhtp-0.5.44.tar.gz
"
